
<recipe>
  <title>Chocolate Avocado Mousse</title>
  <author>
    <name>John Doe</name>
    <contact>
      <email>john.doe@example.com</email>
      <phone>+15551234567</phone>
    </contact>
  </author>
  <ingredients>
    <ingredient>
      <name>Avocado</name>
      <quantity>2</quantity>
      <unit>medium</unit>
    </ingredient>
    <ingredient>
      <name>Cocoa Powder</name>
      <quantity>1</quantity>
      <unit>cup</unit>
    </ingredient>
    <ingredient>
      <name>Vanilla Extract</name>
      <quantity>2</quantity>
      <unit>teaspoons</unit>
    </ingredient>
  </ingredients>
  <steps>
    <step>
      <instruction>Blend avocado, cocoa powder, and vanilla extract in a blender until smooth.</instruction>
      <duration>
        <minutes>10</minutes>
      </duration>
      <tools>Blender, mixing bowl</tools>
    </step>
    <step>
      <instruction>Chill the mixture in the refrigerator for at least 2 hours.</instruction>
      <duration>
        <minutes>120</minutes>
      </duration>
      <tools>Refrigerator</tools>
    </step>
  </steps>
  <nutrition>
    <calories>200</calories>
    <fat>10</fat>
    <protein>5</protein>
    <carbohydrates>15</carbohydrates>
  </nutrition>
