<recipe>
    <metadata>
        <title>Chocolate Avocado Mousse</title>
        <author>
            <name>Chef Avocado</name>
            <role>Chef</role>
        </author>
        <cuisine>Dessert</cuisine>
        <difficulty>Easy</difficulty>
        <servings>4</servings>
        <tags>Dessert, Vegan, Chocolate, Avocado</tags>
    </metadata>
    <ingredients>
        <item>
            <name>Avocado</name>
            <quantity>2</quantity>
            <unit>medium</unit>
        </item>
        <item>
            <name>Dark Chocolate</name>
            <quantity>100</quantity>
            <unit>grams</unit>
        </item>
        <item>
            <name>Maple Syrup</name>
            <quantity>2</quantity>
            <unit>tablespoons</unit>
        </item>
        <item>
            <name>Vanilla Extract</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </item>
        <item>
            <name>Ice Cubes</name>
            <quantity>1</quantity>
            <unit>cup</unit>
        </item>
    </ingredients>
    <steps>
        <item>
            <instruction>Melt the dark chocolate in a heatproof bowl over a pot of simmering water.</instruction>
            <duration_minutes>5</duration_minutes>
            <tools>Heatproof bowl, Pot, Water</tools>
        </item>
        <item>
            <instruction>Blend the avocados, melted chocolate, maple syrup, and vanilla extract until smooth.</instruction>
            <duration_minutes>3</duration_minutes>
            <tools>Blender</tools>
        </item>
        <item>
            <instruction>Add ice cubes and blend until the mousse is thick and creamy.</instruction>
            <duration_minutes>2</duration_minutes>
            <tools>Blender</tools>
        </item>
    </steps>
    <nutrition>
        <calories>250</calories>
        <macros>
            <protein>5g</protein>
            <carbohydrates>20g</carbohydrates>
            <fat>20g</fat>
        </macros>
    </nutrition>
</recipe>