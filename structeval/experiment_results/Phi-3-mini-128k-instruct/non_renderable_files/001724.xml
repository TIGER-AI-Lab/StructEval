<recipe>
    <name>Chocolate Chip Cookies</name>
    <author>Jane Doe</author>
    <cuisine>American</cuisine>
    <prepTime>PT15M</prepTime>
    <cookTime>PT10M</cookTime>
    <servings>12</servings>
    <ingredients>
        <ingredient>
            <name>flour</name>
            <quantity>2.5</quantity>
            <unit>cups</unit>
            <optional>false</optional>
        </ingredient>
        <ingredient>
            <name>baking soda</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
            <optional>false</optional>
        </ingredient>
        <ingredient>
            <name>salt</name>
            <quantity>0.5</quantity>
            <unit>teaspoon</unit>
            <optional>false</optional>
        </ingredient>
        <ingredient>
            <name>butter</name>
            <quantity>1</quantity>
            <unit>cup</unit>
            <optional>false</optional>
        </ingredient>
        <ingredient>
            <name>sugar</name>
            <quantity>1</quantity>
            <unit>cup</unit>
            <optional>false</optional>
        </ingredient>
        <ingredient>
            <name>brown sugar</name>
            <quantity>1</quantity>
            <unit>cup</unit>
            <optional>false</optional>
        </ingredient>
        <ingredient>
            <name>egg</name>
            <quantity>1</quantity>
            <unit>large</unit>
            <optional>false</optional>
        </ingredient>
        <ingredient>
            <name>vanilla extract</name>
            <quantity>2</quantity>
            <unit>teaspoon</unit>
            <optional>false</optional>
        </ingredient>
        <ingredient>
            <name>chocolate chips</name>
            <quantity>2</quantity>
            <unit>cups</unit>
            <optional>true</optional>
        </ingredient>
    </ingredients>
    <instructions>
        <step order="1">
            <description>Preheat oven to 350Â°F (175Â°C).</description>
            <duration>PT5M</duration>
        </step>
        <step order="2">
            <description>In a large bowl, cream together the butter, white sugar, and brown sugar until smooth.</description>
            <duration>PT10M</duration>
        </step>
        <step order="3">
            <description>Beat in the egg and vanilla.</description>
            <duration>PT5M</duration>
        </step>
        <step order="4">
            <description>In a separate bowl, sift together the flour, baking soda, and salt.</description>
            <duration>PT5M</duration>
        </step>
        <step order="5">
            <description>Gradually add the dry ingredients to the creamed mixture, mixing well.</description>
            <duration>PT10M</duration>
        </step>
        <step order="6">
            <description>Stir in the chocolate chips.</description>
            <duration>PT5M</duration>
        </step>
        <step order="7">
            <description>Drop by large spoonfuls onto ungreased cookie sheets.</description>
            <duration>PT10M</duration>
        </step>
        <step order="8">
            <description>Bake for about 10 minutes in the preheated oven, or until edges are nicely browned.</description>
            <duration>PT10M</duration>
        </step>
    </instructions>
    <nutrition>
        <calories>250</calories>
        <fat>12</fat>
        <protein>5</protein>
        <carbohydrates>35</carbohydrates>
    </nutrition>
</recipe>