<recipe>
    <title>Chocolate Avocado Mousse</title>
    <author>
        <name>Chef Avocado</name>
        <contact>
            <email>chefavocado@example.com</email>
            <phone>+1234567890</phone>
        </contact>
    </author>
    <ingredients>
        <ingredient>
            <name>Avocado</name>
            <quantity>2</quantity>
            <unit>medium</unit>
        </ingredient>
        <ingredient>
            <name>Cocoa powder</name>
            <quantity>40</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Maple syrup</name>
            <quantity>30</quantity>
            <unit>ml</unit>
        </ingredient>
        <ingredient>
            <name>Vanilla extract</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </ingredient>
        <ingredient>
            <name>Almond milk</name>
            <quantity>120</quantity>
            <unit>ml</unit>
        </ingredient>
    </ingredients>
    <steps>
        <step>
            <instruction>Blend avocados, cocoa powder, maple syrup, and vanilla extract until smooth.</instruction>
            <minutes>5</minutes>
            <tools>Blender</tools>
        </step>
        <step>
            <instruction>Add almond milk and blend until the mixture reaches a mousse-like consistency.</instruction>
            <minutes>2</minutes>
            <tools>Blender</tools>
        </step>
        <step>
            <instruction>Transfer the mousse to serving cups and refrigerate for at least 1 hour.</instruction>
            <minutes>60</minutes>
            <tools>Spoon</tools>
        </step>
    </steps>
    <nutrition>
        <calories>250</calories>
        <fat>15</fat>
        <protein>5</protein>
        <carbohydrates>20</carbohydrates>
    </nutrition>
    <tags>
        <tag>Vegan</tag>
        <tag>Dessert</tag>
        <tag>Healthy</tag>
    </tags>
</recipe>