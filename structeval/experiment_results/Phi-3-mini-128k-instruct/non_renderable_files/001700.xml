<recipe>
    <title>Chocolate Avocado Mousse</title>
    <author>
        <name>Chef Avocado</name>
        <contact>
            <email>chefavocado@example.com</email>
        </contact>
    </author>
    <ingredients>
        <ingredient>
            <name>Avocado</name>
            <quantity>2</quantity>
            <unit>medium</unit>
        </ingredient>
        <ingredient>
            <name>Dark Chocolate</name>
            <quantity>100</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Maple Syrup</name>
            <quantity>30</quantity>
            <unit>ml</unit>
        </ingredient>
        <ingredient>
            <name>Vanilla Extract</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </ingredient>
        <ingredient>
            <name>Salt</name>
            <quantity>pinch</quantity>
            <unit>teaspoon</unit>
        </ingredient>
    </ingredients>
    <steps>
        <step>
            <order>1</order>
            <instruction>Melt the dark chocolate in a heatproof bowl over a pot of simmering water.</instruction>
            <duration>
                <minutes>5</minutes>
            </duration>
        </step>
        <step>
            <order>2</order>
            <instruction>Blend the avocados, melted chocolate, maple syrup, vanilla extract, and salt in a food processor until smooth.</instruction>
            <duration>
                <minutes>10</minutes>
            </duration>
        </step>
        <step>
            <order>3</order>
            <instruction>Chill the mousse in the refrigerator for at least 1 hour before serving.</instruction>
            <duration>
                <minutes>60</minutes>
            </duration>
        </step>
    </steps>
    <nutrition>
        <calories>250</calories>
        <fat>
            <grams>15</grams>
        </fat>
        <protein>
            <grams>3</grams>
        </protein>
        <carbohydrates>20</carbohydrates>
    </nutrition>
