
<recipe>
    <name>Spaghetti Carbonara</name>
    <author>Chef Mario</author>
    <cuisine>Italian</cuisine>
    <prepTime>PT15M</prepTime>
    <cookTime>PT20M</cookTime>
    <servings>4</servings>
    <ingredients>
        <ingredient>
            <name>Spaghetti</name>
            <quantity>400</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Pancetta</name>
            <quantity>150</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Eggs</name>
            <quantity>3</quantity>
            <unit>large</unit>
        </ingredient>
        <ingredient>
            <name>Parmesan cheese</name>
            <quantity>100</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Black pepper</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </ingredient>
    </ingredients>
    <instructions>
        <step>
            <order>1</order>
            <description>Cook the spaghetti in a large pot of boiling salted water until al dente.</description>
            <duration>PT10M</duration>
        </step>
        <step>
            <order>2</order>
            <description>In a pan, cook the pancetta until crispy.</description>
            <duration>PT5M</duration>
        </step>
        <step>
            <order>3</order>
            <description>Beat the eggs and mix with grated Parmesan cheese and black pepper.</description>
            <duration>PT5M</duration>
        </step>
        <step>
            <order>4</order>
            <description>Combine the spaghetti with the pancetta and remove from heat, then add the egg mixture quickly.</description>
            <duration>PT2M</duration>
        </step>
    </instructions>
    <nutrition>
        <calories>600</calories>
        <protein>25</protein>
        <fat>30</fat>
    </nutrition>
</recipe>
