
<recipe>
    <title>Spaghetti Carbonara</title>
    <author>
        <name>John Doe</name>
        <contact>johndoe@example.com</contact>
    </author>
    <ingredients>
        <ingredient>
            <name>Spaghetti</name>
            <quantity>400</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Pancetta</name>
            <quantity>150</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Eggs</name>
            <quantity>4</quantity>
            <unit>pieces</unit>
        </ingredient>
        <ingredient>
            <name>Parmesan cheese</name>
            <quantity>100</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Black pepper</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </ingredient>
        <ingredient>
            <name>Salt</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </ingredient>
    </ingredients>
    <steps>
        <step>
            <description>Boil water in a large pot and add salt. Cook spaghetti according to package instructions until al dente.</description>
            <duration_minutes>10</duration_minutes>
            <tools>pot, stove</tools>
        </step>
        <step>
            <description>In a pan, cook pancetta over medium heat until crispy.</description>
            <duration_minutes>5</duration_minutes>
            <tools>pan, stove</tools>
        </step>
        <step>
            <description>In a bowl, whisk together eggs and grated Parmesan cheese.</description>
            <duration_minutes>2</duration_minutes>
            <tools>mixing bowl, whisk</tools>
        </step>
        <step>
            <description>Drain spaghetti and add it to the pan with pancetta. Remove from heat and quickly mix in the egg and cheese mixture.</description>
            <duration_minutes>3</duration_minutes>
            <tools>colander, pan, spatula</tools>
        </step>
        <step>
            <description>Season with black pepper and serve immediately.</description>
            <duration_minutes>1</duration_minutes>
            <tools>plate</tools>
        </step>
    </steps>
