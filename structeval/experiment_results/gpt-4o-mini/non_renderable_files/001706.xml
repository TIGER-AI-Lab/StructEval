
<recipe>
    <title>Spaghetti Carbonara</title>
    <author>
        <name>Giovanni Rossi</name>
        <contact>
            <email>giovanni.rossi@example.com</email>
        </contact>
    </author>
    <ingredients>
        <ingredient>
            <name>Spaghetti</name>
            <quantity>400</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Pancetta</name>
            <quantity>150</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Eggs</name>
            <quantity>4</quantity>
            <unit>pieces</unit>
        </ingredient>
        <ingredient>
            <name>Parmesan cheese</name>
            <quantity>100</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Black pepper</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </ingredient>
    </ingredients>
    <steps>
        <step>
            <description>Boil the spaghetti in salted water until al dente.</description>
            <duration>
                <minutes>10</minutes>
            </duration>
            <tools>
                <tool>
                    <toolName>Pot</toolName>
                    <required>true</required>
                </tool>
                <tool>
                    <toolName>Colander</toolName>
                    <required>true</required>
                </tool>
            </tools>
        </step>
        <step>
            <description>Fry the pancetta in a pan until crispy.</description>
            <duration>
                <minutes>5</minutes>
            </duration>
            <tools>
                <tool>
                    <toolName>Frying pan</toolName>
                    <required>true</required>
                </tool>
                <tool>
                    <toolName>Spatula</toolName>
                    <required>true</required>
                </tool>
            </tools>
        </step>
        <step>
            <description>Beat the eggs and mix with grated Parmesan cheese and black pepper.</description>
            <duration>
                <minutes>2</minutes>
            </duration>
            <tools>
                <tool>
                    <toolName>Bowl</toolName>
                    <required>true</required>
                </tool>
                <tool>
                    <toolName>Whisk</toolName>
                    <required>true</required>
                </tool>
            </tools>
        </step>
        <step>
            <description>Combine the spaghetti with the pancetta and remove from heat. Quickly mix in the egg mixture.</description>
            <duration>
                <minutes>3</minutes>
            </duration>
            <tools>
                <tool>
                    <toolName>Tongs</toolName>
                    <required>true</required>
                </tool>
                <tool>
                    <toolName>Serving plate</toolName>
                    <required>true</required>
                </tool>
            </tools>
        </step>
    </steps>
    <nutrition>
        <calories>600</calories>
        <fat>
            <grams>25</grams>
        </fat>
        <protein>
            <grams>30</grams>
        </protein>
    </nutrition>
    <metadata>
        <cuisine>Italian</cuisine>
        <difficulty>medium</difficulty>
        <published date="2023-10-01"/>
    </metadata>
</recipe>
