
<recipe>
  <title>Spicy Chickpea and Spinach Curry</title>
  <author>
    <name>Priya Sharma</name>
    <role>chef</role>
  </author>
  <metadata>
    <cuisine>Indian</cuisine>
    <difficulty>medium</difficulty>
    <servings>4</servings>
    <tags>
      <tag>vegetarian</tag>
      <tag>gluten-free</tag>
      <tag>spicy</tag>
      <tag>healthy</tag>
    </tags>
  </metadata>
  <ingredients>
    <item>
      <name>chickpeas</name>
      <quantity>400</quantity>
      <unit>grams</unit>
    </item>
    <item>
      <name>spinach</name>
      <quantity>200</quantity>
      <unit>grams</unit>
    </item>
    <item>
      <name>onion</name>
      <quantity>1</quantity>
      <unit>medium</unit>
    </item>
    <item>
      <name>garlic cloves</name>
      <quantity>3</quantity>
      <unit>pieces</unit>
    </item>
    <item>
      <name>ginger</name>
      <quantity>1</quantity>
      <unit>inch</unit>
    </item>
    <item>
      <name>tomato puree</name>
      <quantity>150</quantity>
      <unit>grams</unit>
    </item>
    <item>
      <name>coconut milk</name>
      <quantity>200</quantity>
      <unit>ml</unit>
    </item>
    <item>
      <name>cumin seeds</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </item>
    <item>
      <name>turmeric powder</name>
      <quantity>0.5</quantity>
      <unit>teaspoon</unit>
    </item>
    <item>
      <name>red chili powder</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </item>
    <item>
      <name>garam masala</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </item>
    <item>
      <name>vegetable oil</name>
      <quantity>2</quantity>
      <unit>tablespoons</unit>
    </item>
    <item>
      <name>salt</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </item>
  </ingredients>
  <steps>
    <step>
      <instruction>Heat oil in a pan and add cumin seeds until they splutter.</instruction>
      <duration_minutes>2</duration_minutes>
      <tools>pan, stove</tools>
    </step>
    <step>
      <instruction>Add chopped onions, garlic, and ginger; sautÃ© until golden brown.</instruction>
      <duration_minutes>5</duration_minutes>
      <tools>pan, spatula</tools>
    </step>
    <step>
      <instruction>Stir in turmeric, red chili powder, and garam masala; cook for 1 minute.</instruction>
      <duration_minutes>1</duration_minutes>
      <tools>pan, spatula</tools>
    </step>
    <step>
      <instruction>Add tomato puree and cook until oil separates from the masala.</instruction>
      <duration_minutes>5</duration_minutes>
      <tools>pan, spatula</tools>
    </step>
    <step>
      <instruction>Add chickpeas and coconut milk; simmer for 10 minutes.</instruction>
      <duration_minutes>10</duration_minutes>
      <tools>pan, stove, spoon</tools>
    </step>
    <step>
      <instruction>Mix in spinach and cook until wilted, about 3 minutes.</instruction>
      <duration_minutes>3</duration_minutes>
      <tools>pan, stove, spoon</tools>
    </step>
    <step>
      <instruction>Season with salt and serve hot with rice or bread.</instruction>
      <duration_minutes>2</duration_minutes>
      <tools>spoon</tools>
    </step>
  </steps>
