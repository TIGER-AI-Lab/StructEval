
<recipe>
  <title>Classic Spaghetti Carbonara</title>
  <author>
    <name>Maria Rossi</name>
    <contact>
      <email>maria.rossi@example.com</email>
      <phone>+39-345-678-9012</phone>
    </contact>
  </author>
  <ingredients>
    <ingredient>
      <name>Spaghetti</name>
      <quantity>200</quantity>
      <unit>grams</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Pancetta</name>
      <quantity>100</quantity>
      <unit>grams</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Eggs</name>
      <quantity>3</quantity>
      <unit>units</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Parmesan cheese</name>
      <quantity>50</quantity>
      <unit>grams</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Black pepper</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
      <optional>true</optional>
    </ingredient>
  </ingredients>
  <steps>
    <step>
      <description>Boil the spaghetti in salted water until al dente.</description>
      <duration_minutes>10</duration_minutes>
      <tools>
        <tool>Pot</tool>
        <tool>Stove</tool>
        <tool>Colander</tool>
      </tools>
    </step>
    <step>
      <description>Fry the pancetta until crispy.</description>
      <duration_minutes>5</duration_minutes>
      <tools>
        <tool>Frying pan</tool>
        <tool>Stove</tool>
      </tools>
    </step>
    <step>
      <description>Beat the eggs and mix with grated Parmesan cheese.</description>
      <duration_minutes>3</duration_minutes>
      <tools>
        <tool>Bowl</tool>
        <tool>Whisk</tool>
      </tools>
    </step>
    <step>
      <description>Combine spaghetti with pancetta and remove from heat, then quickly mix in the egg and cheese mixture.</description>
      <duration_minutes>2</duration_minutes>
      <tools>
        <tool>Mixing bowl</tool>
        <tool>Spatula</tool>
      </tools>
    </step>
    <step>
      <description>Season with black pepper and serve immediately.</description>
      <duration_minutes>1</duration_minutes>
      <tools>
        <tool>Grinder</tool>
      </tools>
    </step>
  </steps>
  <metadata>
    <cuisine>Italian</cuisine>
    <difficulty>medium</difficulty>
    <prep_time_minutes>15</prep_time_minutes>
    <tags>
      <tag>pasta</tag>
      <tag>quick</tag>
      <tag>classic</tag>
      <tag>Italian</tag>
      <tag>dinner</tag>
    </tags>
  </metadata>
</recipe>
