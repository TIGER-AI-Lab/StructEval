  <ingredients>
    <ingredient>
      <name>Avocado</name>
      <quantity>2</quantity>
      <unit>pieces</unit>
    </ingredient>
    <ingredient>
      <name>Dark Chocolate</name>
      <quantity>150</quantity>
      <unit>grams</unit>
    </ingredient>
  </ingredients>
  <instructions>
    <step>
      <description>Melt the dark chocolate gently over a double boiler.</description>
      <duration>PT10M</duration>
    </step>
    <step>
      <description>Blend the avocado and melted chocolate until smooth and creamy.</description>
      <duration>PT5M</duration>
    </step>
