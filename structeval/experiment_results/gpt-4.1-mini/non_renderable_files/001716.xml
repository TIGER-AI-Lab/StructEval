
<recipe>
  <title>Classic Chocolate Chip Cookies</title>
  <author>
    <name>Jane Doe</name>
    <contact>
      <email>jane.doe@example.com</email>
      <phone>+1-555-123-4567</phone>
    </contact>
  </author>
  <ingredients>
    <ingredient>
      <name>All-purpose flour</name>
      <quantity>250</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Sugar</name>
      <quantity>150</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Brown sugar</name>
      <quantity>100</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Butter</name>
      <quantity>200</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Eggs</name>
      <quantity>2</quantity>
      <unit>units</unit>
    </ingredient>
    <ingredient>
      <name>Vanilla extract</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </ingredient>
    <ingredient>
      <name>Baking soda</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </ingredient>
    <ingredient>
      <name>Salt</name>
      <quantity>0.5</quantity>
      <unit>teaspoon</unit>
    </ingredient>
    <ingredient>
      <name>Chocolate chips</name>
      <quantity>200</quantity>
      <unit>grams</unit>
    </ingredient>
  </ingredients>
  <instructions>
    <step>
      <stepNumber>1</stepNumber>
      <description>Preheat the oven to 175Â°C (350Â°F) and line a baking sheet with parchment paper.</description>
      <timer>
        <duration>PT10M</duration>
      </timer>
    </step>
    <step>
      <stepNumber>2</stepNumber>
      <description>Cream together the butter, sugar, and brown sugar until smooth and fluffy.</description>
      <timer>
        <duration>PT5M</duration>
      </timer>
    </step>
    <step>
      <stepNumber>3</stepNumber>
      <description>Beat in the eggs one at a time, then stir in the vanilla extract.</description>
      <timer>
        <duration>PT3M</duration>
      </timer>
    </step>
    <step>
      <stepNumber>4</stepNumber>
      <description>Combine the flour, baking soda, and salt; gradually blend into the creamed mixture.</description>
      <timer>
        <duration>PT4M</duration>
      </timer>
    </step>
    <step>
      <stepNumber>5</stepNumber>
      <description>Fold in the chocolate chips evenly.</description>
      <timer>
        <duration>PT2M</duration>
      </timer>
    </step>
    <step>
      <stepNumber>6</stepNumber>
      <description>Drop spoonfuls of dough onto the prepared baking sheet.</description>
      <timer>
        <duration>PT3M</duration>
      </timer>
    </step>
    <step>
      <stepNumber>7</stepNumber>
      <description>Bake for 10-12 minutes or until edges are golden brown.</description>
      <timer>
        <duration>PT12M</duration>
      </timer>
    </step>
    <step>
      <stepNumber>8</stepNumber>
      <description>Allow cookies to cool on the baking sheet for 5 minutes before transferring to a wire rack.</description>
      <timer>
        <duration>PT5M</duration>
      </timer>
    </step>
  </instructions>
