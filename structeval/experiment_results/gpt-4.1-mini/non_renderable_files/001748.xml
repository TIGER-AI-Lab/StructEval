
<recipe>
  <title>Spicy Thai Basil Chicken</title>
  <author>
    <name>Maria Lopez</name>
    <contact>maria.lopez@example.com</contact>
  </author>
  <ingredients>
    <item>
      <name>Chicken breast</name>
      <quantity>500</quantity>
      <unit>grams</unit>
    </item>
    <item>
      <name>Fresh basil leaves</name>
      <quantity>30</quantity>
      <unit>grams</unit>
    </item>
    <item>
      <name>Garlic cloves</name>
      <quantity>4</quantity>
      <unit>pieces</unit>
    </item>
    <item>
      <name>Red chili</name>
      <quantity>2</quantity>
      <unit>pieces</unit>
    </item>
    <item>
      <name>Fish sauce</name>
      <quantity>2</quantity>
      <unit>tablespoons</unit>
    </item>
    <item>
      <name>Soy sauce</name>
      <quantity>1.5</quantity>
      <unit>tablespoons</unit>
    </item>
    <item>
      <name>Vegetable oil</name>
      <quantity>2</quantity>
      <unit>tablespoons</unit>
    </item>
    <item>
      <name>White sugar</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </item>
  </ingredients>
  <instructions>
    <step>
      <stepNumber>1</stepNumber>
      <description>Chop the chicken breast into bite-sized pieces.</description>
      <timer>
        <seconds>0</seconds>
      </timer>
    </step>
    <step>
      <stepNumber>2</stepNumber>
      <description>Crush the garlic cloves and slice the red chili thinly.</description>
      <timer>
        <seconds>0</seconds>
      </timer>
    </step>
    <step>
      <stepNumber>3</stepNumber>
      <description>Heat vegetable oil in a wok over medium-high heat and sautÃ© garlic and chili until fragrant.</description>
      <timer>
        <seconds>60</seconds>
      </timer>
    </step>
    <step>
      <stepNumber>4</stepNumber>
      <description>Add chicken pieces and stir-fry until cooked through.</description>
      <timer>
        <seconds>300</seconds>
      </timer>
    </step>
    <step>
      <stepNumber>5</stepNumber>
      <description>Mix in fish sauce, soy sauce, and sugar, then stir well.</description>
      <timer>
        <seconds>30</seconds>
      </timer>
    </step>
    <step>
      <stepNumber>6</stepNumber>
      <description>Add fresh basil leaves and cook until wilted.</description>
      <timer>
        <seconds>60</seconds>
      </timer>
    </step>
    <step>
      <stepNumber>7</stepNumber>
      <description>Serve hot with steamed rice.</description>
      <timer>
        <seconds>0</seconds>
      </timer>
    </step>
  </instructions>
  <metadata>
    <cuisine>Thai</cuisine>
    <difficulty>medium</difficulty>
    <servings>4</servings>
  </metadata>
  <nutrition>
    <calories>350</calories>
    <fat>15.5</fat>
    <carbohydrates>10.2</carbohydrates>
  </nutrition>
</recipe>
