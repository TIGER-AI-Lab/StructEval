
<recipe>
  <title>Classic Chocolate Chip Cookies</title>
  <author>
    <name>Jane Doe</name>
    <contact>
      <email>jane.doe@example.com</email>
      <phone>+1-555-123-4567</phone>
    </contact>
  </author>
  <ingredients>
    <ingredient>
      <name>All-purpose flour</name>
      <quantity>250</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Sugar</name>
      <quantity>150</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Butter</name>
      <quantity>100</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Chocolate chips</name>
      <quantity>200</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Eggs</name>
      <quantity>2</quantity>
      <unit>pieces</unit>
    </ingredient>
  </ingredients>
  <instructions>
    <step>
      <order>1</order>
      <description>Preheat the oven to 180 degrees Celsius (350 degrees Fahrenheit).</description>
      <duration>
        <minutes>10</minutes>
      </duration>
    </step>
    <step>
      <order>2</order>
      <description>Cream together the butter and sugar until light and fluffy.</description>
      <duration>
        <minutes>5</minutes>
      </duration>
    </step>
    <step>
      <order>3</order>
      <description>Beat in the eggs one at a time.</description>
      <duration>
        <minutes>3</minutes>
      </duration>
    </step>
    <step>
      <order>4</order>
      <description>Gradually add the flour and mix until combined.</description>
      <duration>
        <minutes>5</minutes>
      </duration>
    </step>
    <step>
      <order>5</order>
      <description>Fold in the chocolate chips.</description>
      <duration>
        <minutes>2</minutes>
      </duration>
    </step>
    <step>
      <order>6</order>
      <description>Drop spoonfuls of dough onto a baking sheet and bake for 12 minutes.</description>
      <duration>
        <minutes>12</minutes>
      </duration>
    </step>
  </instructions>
  <nutrition>
    <calories>2500</calories>
    <fat>
      <grams>120</grams>
      <type>saturated</type>
    </fat>
    <carbohydrates>
      <grams>300</grams>
    </carbohydrates>
    <protein>
      <grams>30</grams>
    </protein>
  </nutrition>
</recipe>
