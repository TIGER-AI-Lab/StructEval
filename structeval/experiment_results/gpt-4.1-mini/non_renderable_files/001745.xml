
<recipe>
  <title>Classic Chocolate Chip Cookies</title>
  <author>
    <name>Jane Doe</name>
    <profileUrl>https://www.example.com/authors/janedoe</profileUrl>
  </author>
  <ingredients>
    <ingredient>
      <name>All-purpose flour</name>
      <quantity>250</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Baking soda</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </ingredient>
    <ingredient>
      <name>Salt</name>
      <quantity>0.5</quantity>
      <unit>teaspoon</unit>
    </ingredient>
    <ingredient>
      <name>Unsalted butter</name>
      <quantity>170</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Granulated sugar</name>
      <quantity>150</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Brown sugar</name>
      <quantity>165</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Vanilla extract</name>
      <quantity>2</quantity>
      <unit>teaspoons</unit>
    </ingredient>
    <ingredient>
      <name>Eggs</name>
      <quantity>2</quantity>
      <unit>units</unit>
    </ingredient>
    <ingredient>
      <name>Chocolate chips</name>
      <quantity>300</quantity>
      <unit>grams</unit>
    </ingredient>
  </ingredients>
  <instructions>
    <step>
      <stepNumber>1</stepNumber>
      <description>Preheat the oven to 175 degrees Celsius (350 degrees Fahrenheit).</description>
      <timer>
        <durationMinutes>10</durationMinutes>
        <optional>false</optional>
      </timer>
    </step>
    <step>
      <stepNumber>2</stepNumber>
      <description>In a bowl, whisk together flour, baking soda, and salt.</description>
      <timer>
        <durationMinutes>5</durationMinutes>
        <optional>false</optional>
      </timer>
    </step>
    <step>
      <stepNumber>3</stepNumber>
      <description>Cream the butter, granulated sugar, and brown sugar until smooth.</description>
      <timer>
        <durationMinutes>7</durationMinutes>
        <optional>false</optional>
      </timer>
    </step>
    <step>
      <stepNumber>4</stepNumber>
      <description>Beat in the eggs one at a time, then stir in the vanilla extract.</description>
      <timer>
        <durationMinutes>5</durationMinutes>
        <optional>false</optional>
      </timer>
    </step>
    <step>
      <stepNumber>5</stepNumber>
      <description>Gradually blend in the dry ingredients, then fold in the chocolate chips.</description>
      <timer>
        <durationMinutes>8</durationMinutes>
        <optional>false</optional>
      </timer>
    </step>
    <step>
      <stepNumber>6</stepNumber>
      <description>Drop spoonfuls of dough onto ungreased baking sheets.</description>
      <timer>
        <durationMinutes>5</durationMinutes>
        <optional>true</optional>
      </timer>
    </step>
    <step>
      <stepNumber>7</stepNumber>
      <description>Bake for 10-12 minutes or until edges are golden brown.</description>
      <timer>
        <durationMinutes>12</durationMinutes>
        <optional>false</optional>
      </timer>
    </step>
    <step>
      <stepNumber>8</stepNumber>
      <description>Allow cookies to cool on baking sheet for 5 minutes before transferring to wire racks.</description>
      <timer>
        <durationMinutes>5</durationMinutes>
        <optional>true</optional>
      </timer>
    </step>
  </instructions>
  <nutrition>
    <calories>200</calories>
    <fat>10</fat>
    <carbohydrates>28</carbohydrates>
    <protein>2</protein>
  </nutrition>
  <tags>
    <tag>Dessert</tag>
    <tag>Cookies</tag>
    <tag>Chocolate</tag>
    <tag>Snack</tag>
    <tag>Vegetarian</tag>
  </tags>
</recipe>
