
<recipe>
  <name>Classic Spaghetti Carbonara</name>
  <author>Maria Rossi</author>
  <cuisine>Italian</cuisine>
  <prepTime>15</prepTime>
  <cookTime>20</cookTime>
  <servings>4</servings>
  <ingredients>
    <ingredient>
      <name>Spaghetti</name>
      <quantity>400</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Pancetta</name>
      <quantity>150</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Egg yolks</name>
      <quantity>4</quantity>
      <unit>units</unit>
    </ingredient>
    <ingredient>
      <name>Parmesan cheese</name>
      <quantity>100</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Black pepper</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </ingredient>
    <ingredient>
      <name>Salt</name>
      <quantity>to taste</quantity>
      <unit></unit>
    </ingredient>
  </ingredients>
  <instructions>
    <step>
      <order>1</order>
      <description>Boil salted water in a large pot and cook spaghetti until al dente.</description>
    </step>
    <step>
      <order>2</order>
      <description>Fry pancetta in a pan until crispy and set aside.</description>
    </step>
    <step>
      <order>3</order>
      <description>Whisk egg yolks with grated Parmesan cheese and black pepper in a bowl.</description>
    </step>
    <step>
      <order>4</order>
      <description>Drain spaghetti and immediately mix with pancetta and egg mixture off the heat to create a creamy sauce.</description>
    </step>
    <step>
      <order>5</order>
      <description>Serve immediately with extra Parmesan and black pepper on top.</description>
    </step>
  </instructions>
  <nutrition>
    <calories>450</calories>
    <protein>20.5</protein>
    <fat>18.3</fat>
    <carbohydrates>50.2</carbohydrates>
  </nutrition>
</recipe>
