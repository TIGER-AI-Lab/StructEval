
<recipe>
  <metadata>
    <cuisine>Italian</cuisine>
    <difficulty>medium</difficulty>
    <prep_time_minutes>30</prep_time_minutes>
    <tags>
      <tag>pasta</tag>
      <tag>vegetarian</tag>
      <tag>tomato sauce</tag>
    </tags>
