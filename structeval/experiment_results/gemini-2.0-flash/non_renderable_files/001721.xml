  <title>Spaghetti with Marinara Sauce</title>
  <author>
    <name>Julia Child</name>
    <contact>
      <email>julia.child@example.com</email>
      <phone>+1-555-123-4567</phone>
    </contact>
  </author>
  <ingredients>
    <ingredient>
      <name>Spaghetti</name>
      <quantity>500</quantity>
      <unit>grams</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Canned crushed tomatoes</name>
      <quantity>700</quantity>
      <unit>grams</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Olive oil</name>
      <quantity>3</quantity>
      <unit>tablespoons</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Garlic</name>
      <quantity>2</quantity>
      <unit>cloves</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Fresh basil</name>
      <quantity>1/4</quantity>
      <unit>cup</unit>
      <optional>true</optional>
    </ingredient>
  </ingredients>
  <steps>
    <step>
      <description>Heat olive oil in a large pot over medium heat. Add garlic and cook until fragrant, about 1 minute.</description>
      <duration_minutes>5</duration_minutes>
      <tools>Pot, Spoon</tools>
    </step>
    <step>
      <description>Add crushed tomatoes to the pot and bring to a simmer. Season with salt and pepper to taste.</description>
      <duration_minutes>15</duration_minutes>
      <tools>Pot, Spoon</tools>
    </step>
    <step>
      <description>While the sauce is simmering, cook spaghetti according to package directions.</description>
      <duration_minutes>10</duration_minutes>
      <tools>Pot, Strainer</tools>
    </step>
    <step>
      <description>Drain the spaghetti and add it to the pot with the marinara sauce. Toss to coat.</description>
      <duration_minutes>2</duration_minutes>
      <tools>Pot, Spoon</tools>
    </step>
    <step>
      <description>Serve immediately, garnished with fresh basil, if desired.</description>
      <duration_minutes>0</duration_minutes>
      <tools>Serving Plate</tools>
    </step>
  </steps>
</recipe>
