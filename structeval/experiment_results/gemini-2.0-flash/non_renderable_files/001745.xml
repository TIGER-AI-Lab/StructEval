<?xml version="1.0" encoding="UTF-8"?>
<recipes>
  <recipe>
    <title>Delicious Chocolate Chip Cookies</title>
    <author>
      <name>Jane Doe</name>
      <profileUrl>https://www.example.com/janedoe</profileUrl>
    </author>
    <ingredients>
      <item>
        <name>All-purpose flour</name>
        <quantity>3</quantity>
        <unit>cups</unit>
      </item>
      <item>
        <name>Granulated sugar</name>
        <quantity>1</quantity>
        <unit>cup</unit>
      </item>
      <item>
        <name>Brown sugar</name>
        <quantity>1</quantity>
        <unit>cup</unit>
      </item>
      <item>
        <name>Butter</name>
        <quantity>1</quantity>
        <unit>cup</unit>
      </item>
      <item>
        <name>Eggs</name>
        <quantity>2</quantity>
        <unit/>
      </item>
      <item>
        <name>Vanilla extract</name>
        <quantity>1</quantity>
        <unit>teaspoon</unit>
      </item>
      <item>
        <name>Chocolate chips</name>
        <quantity>2</quantity>
        <unit>cups</unit>
      </item>
    </ingredients>
    <instructions>
      <item>
        <stepNumber>1</stepNumber>
        <description>Preheat oven to 375Â°F (190Â°C).</description>
      </item>
      <item>
        <stepNumber>2</stepNumber>
        <description>Cream together the butter, granulated sugar, and brown sugar until smooth.</description>
      </item>
      <item>
        <stepNumber>3</stepNumber>
        <description>Beat in the eggs, then stir in the vanilla.</description>
      </item>
      <item>
        <stepNumber>4</stepNumber>
        <description>Gradually add the flour, mixing until just combined.</description>
      </item>
      <item>
        <stepNumber>5</stepNumber>
        <description>Stir in the chocolate chips.</description>
      </item>
      <item>
        <stepNumber>6</stepNumber>
        <description>Drop by rounded tablespoons onto baking sheets.</description>
      </item>
      <item>
        <stepNumber>7</stepNumber>
        <description>Bake for 8-10 minutes, or until edges are nicely browned.</description>
        <timer>
          <durationMinutes>9</durationMinutes>
          <optional>false</optional>
        </timer>
      </item>
      <item>
        <stepNumber>8</stepNumber>
        <description>Cool on baking sheets for a few minutes before transferring to a wire rack to cool completely.</description>
        <timer>
          <durationMinutes>5</durationMinutes>
          <optional>true</optional>
        </timer>
      </item>
    </instructions>
    <nutrition>
      <calories>250</calories>
      <fat>12</fat>
      <carbohydrates>32</carbohydrates>
      <protein>3</protein>
    </nutrition>
    <tags>
      <tag>cookies</tag>
      <tag>chocolate</tag>
      <tag>dessert</tag>
      <tag>baking</tag>
    </tags>
  </recipe>
</recipes>
