
<recipe>
  <title>Spicy Mango Salsa with Black Beans</title>
  <author>
    <name>Chef Isabella Rossi</name>
    <contact>
      <email>isabella.rossi@email.com</email>
      <phone>+15551234567</phone>
    </contact>
  </author>
  <ingredients>
    <ingredient>
      <name>Ripe Mango</name>
      <quantity>2</quantity>
      <unit>units</unit>
    </ingredient>
    <ingredient>
      <name>Black Beans</name>
      <quantity>1</quantity>
      <unit>cup</unit>
    </ingredient>
    <ingredient>
      <name>Red Onion</name>
      <quantity>0.5</quantity>
      <unit>unit</unit>
    </ingredient>
    <ingredient>
      <name>Jalapeno</name>
      <quantity>1</quantity>
      <unit>unit</unit>
    </ingredient>
    <ingredient>
      <name>Lime Juice</name>
      <quantity>2</quantity>
      <unit>tablespoons</unit>
    </ingredient>
    <ingredient>
      <name>Cilantro</name>
      <quantity>0.25</quantity>
      <unit>cup</unit>
    </ingredient>
    <ingredient>
      <name>Salt</name>
      <quantity>0.5</quantity>
      <unit>teaspoon</unit>
    </ingredient>
  </ingredients>
  <steps>
    <step>
      <instruction>Dice the mango, red onion, and jalapeno.</instruction>
      <duration>
        <minutes>10</minutes>
      </duration>
      <tools>Knife, Cutting Board</tools>
    </step>
    <step>
      <instruction>Rinse and drain the black beans.</instruction>
      <duration>
        <minutes>2</minutes>
      </duration>
      <tools>Colander</tools>
    </step>
    <step>
      <instruction>Combine all ingredients in a bowl.</instruction>
      <duration>
        <minutes>3</minutes>
      </duration>
      <tools>Bowl, Spoon</tools>
    </step>
    <step>
      <instruction>Add lime juice and salt. Mix well.</instruction>
      <duration>
        <minutes>2</minutes>
      </duration>
      <tools>Spoon</tools>
    </step>
    <step>
      <instruction>Chop cilantro and add to the salsa. Stir gently.</instruction>
      <duration>
        <minutes>3</minutes>
      </duration>
      <tools>Knife, Cutting Board, Spoon</tools>
    </step>
    <step>
      <instruction>Refrigerate for at least 30 minutes before serving.</instruction>
      <duration>
        <minutes>30</minutes>
      </duration>
      <tools>Refrigerator</tools>
    </step>
  </steps>
  <nutrition>
    <calories>180</calories>
    <fat>2</fat>
    <protein>5</protein>
    <carbohydrates>35</carbohydrates>
  </nutrition>
