
<recipe>
  <title>Spicy Mango Salsa Chicken</title>
  <author>
    <name>Alice Miller</name>
    <role>Chef</role>
  </author>
  <ingredients>
    <ingredient>
      <name>Chicken Breast</name>
      <quantity>2</quantity>
      <unit>lbs</unit>
    </ingredient>
    <ingredient>
      <name>Mango</name>
      <quantity>1</quantity>
      <unit>large</unit>
    </ingredient>
    <ingredient>
      <name>Red Onion</name>
      <quantity>0.5</quantity>
      <unit>medium</unit>
    </ingredient>
    <ingredient>
      <name>Jalapeno</name>
      <quantity>1</quantity>
      <unit>small</unit>
    </ingredient>
    <ingredient>
      <name>Lime Juice</name>
      <quantity>2</quantity>
      <unit>tablespoons</unit>
    </ingredient>
    <ingredient>
      <name>Cilantro</name>
      <quantity>0.25</quantity>
      <unit>cup</unit>
    </ingredient>
    <ingredient>
      <name>Olive Oil</name>
      <quantity>2</quantity>
      <unit>tablespoons</unit>
    </ingredient>
    <ingredient>
      <name>Chili Powder</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </ingredient>
    <ingredient>
      <name>Salt</name>
      <quantity>0.5</quantity>
      <unit>teaspoon</unit>
    </ingredient>
    <ingredient>
      <name>Black Pepper</name>
      <quantity>0.25</quantity>
      <unit>teaspoon</unit>
    </ingredient>
  </ingredients>
  <steps>
    <step>
      <instruction>Preheat grill to medium-high heat.</instruction>
      <duration_minutes>5</duration_minutes>
      <tools>Grill</tools>
    </step>
    <step>
      <instruction>In a bowl, combine diced mango, red onion, jalapeno, lime juice, and cilantro. Season with salt and pepper.</instruction>
      <duration_minutes>10</duration_minutes>
      <tools>Bowl, Knife, Cutting Board</tools>
    </step>
    <step>
      <instruction>Rub chicken breasts with olive oil, chili powder, salt, and pepper.</instruction>
      <duration_minutes>5</duration_minutes>
      <tools>Small Bowl</tools>
    </step>
    <step>
      <instruction>Grill chicken for 6-8 minutes per side, or until cooked through.</instruction>
      <duration_minutes>16</duration_minutes>
      <tools>Grill, Tongs</tools>
    </step>
    <step>
      <instruction>Top grilled chicken with mango salsa and serve.</instruction>
      <duration_minutes>2</duration_minutes>
      <tools>Serving Plate</tools>
    </step>
  </steps>
  <nutrition>
    <calories>350</calories>
    <protein_grams>35</protein_grams>
    <fat_grams>15</fat_grams>
    <carbohydrates_grams>20</carbohydrates_grams>
  </nutrition>
  <metadata>
    <cuisine>Mexican</cuisine>
    <difficulty>Easy</difficulty>
    <published_date>2023-10-27</published_date>
  </metadata>
</recipe>
