
<recipe>
    <title>Spicy Mango Salsa Chicken</title>
    <author>
        <name>Jane Doe</name>
        <contact>
            <email>jane.doe@example.com</email>
        </contact>
    </author>
    <ingredients>
        <ingredient>
            <name>Chicken Breast</name>
            <quantity>2</quantity>
            <unit>pieces</unit>
        </ingredient>
        <ingredient>
            <name>Mango</name>
            <quantity>1</quantity>
            <unit>large</unit>
        </ingredient>
        <ingredient>
            <name>Red Onion</name>
            <quantity>0.5</quantity>
            <unit>medium</unit>
        </ingredient>
        <ingredient>
            <name>Jalapeno</name>
            <quantity>1</quantity>
            <unit>small</unit>
        </ingredient>
        <ingredient>
            <name>Lime Juice</name>
            <quantity>2</quantity>
            <unit>tablespoons</unit>
        </ingredient>
        <ingredient>
            <name>Cilantro</name>
            <quantity>0.25</quantity>
            <unit>cup</unit>
        </ingredient>
        <ingredient>
            <name>Olive Oil</name>
            <quantity>1</quantity>
            <unit>tablespoon</unit>
        </ingredient>
        <ingredient>
            <name>Chili Powder</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </ingredient>
        <ingredient>
            <name>Salt</name>
            <quantity>0.5</quantity>
            <unit>teaspoon</unit>
        </ingredient>
        <ingredient>
            <name>Black Pepper</name>
            <quantity>0.25</quantity>
            <unit>teaspoon</unit>
        </ingredient>
    </ingredients>
    <steps>
        <step>
            <description>Prepare the mango salsa by dicing the mango, red onion, and jalapeno. Chop the cilantro. Combine all ingredients in a bowl with lime juice.</description>
            <duration>
                <minutes>15</minutes>
            </duration>
            <tools>
                <tool>
                    <toolName>Knife</toolName>
                    <required>true</required>
                </tool>
                <tool>
                    <toolName>Cutting Board</toolName>
                    <required>true</required>
                </tool>
                <tool>
                    <toolName>Bowl</toolName>
                    <required>true</required>
                </tool>
            </tools>
        </step>
        <step>
            <description>Season the chicken breasts with chili powder, salt, and pepper.</description>
            <duration>
                <minutes>5</minutes>
            </duration>
            <tools>
                <tool>
                    <toolName>Small Bowl</toolName>
                    <required>false</required>
                </tool>
            </tools>
        </step>
        <step>
            <description>Heat olive oil in a skillet over medium heat. Cook the chicken breasts for 6-8 minutes per side, or until cooked through.</description>
            <duration>
                <minutes>16</minutes>
            </duration>
            <tools>
                <tool>
                    <toolName>Skillet</toolName>
                    <required>true</required>
                </tool>
                <tool>
                    <toolName>Stove</toolName>
                    <required>true</required>
                </tool>
                <tool>
                    <toolName>Spatula</toolName>
                    <required>true</required>
                </tool>
            </tools>
        </step>
        <step>
            <description>Serve the chicken breasts topped with the mango salsa.</description>
            <duration>
                <minutes>2</minutes>
            </duration>
            <tools>
                <tool>
                    <toolName>Plate</toolName>
                    <required>true</required>
                </tool>
            </tools>
        </step>
    </steps>
    <nutrition>
        <calories>450</calories>
        <fat>
            <grams>15</grams>
        </fat>
        <protein>
            <grams>40</grams>
        </protein>
    </nutrition>
    <metadata>
        <cuisine>Mexican Fusion</cuisine>
        <difficulty>easy</difficulty>
        <published date="2023-10-27"/>
    </metadata>
</recipe>
