<recipe>
  <metadata>
    <title>Spaghetti Carbonara</title>
    <cuisine>Italian</cuisine>
    <difficulty>Easy</difficulty>
    <lastUpdated>2023-04-01</lastUpdated>
  </metadata>
  <author>
    <name>John Doe</name>
    <contact>john.doe@example.com</contact>
  </author>
  <nutrition>
    <calories>500</calories>
    <fat>20</fat>
    <protein>30</protein>
    <carbohydrates>50</carbohydrates>
  </nutrition>
  <ingredients>
    <item>
      <name>Spaghetti</name>
      <quantity>200</quantity>
      <unit>grams</unit>
    </item>
    <item>
      <name>Eggs</name>
      <quantity>4</quantity>
      <unit>large</unit>
    </item>
    <item>
      <name>Parmesan Cheese</name>
      <quantity>50</quantity>
      <unit>grams</unit>
    </item>
    <item>
      <name>Garlic</name>
      <quantity>2</quantity>
      <unit>cloves</unit>
    </item>
    <item>
      <name>Pecorino Romano Cheese</name>
      <quantity>50</quantity>
      <unit>grams</unit>
    </item>
  </ingredients>
  <steps>
    <step>
      <description>Boil the spaghetti in salted water until al dente.</description>
      <duration>10</duration>
      <tools>Pot, Strainer</tools>
    </step>
    <step>
      <description>In a bowl, beat the eggs and mix with grated Parmesan cheese.</description>
      <duration>5</duration>
      <tools>Bowl, Whisk</tools>
    </step>
    <step>
      <description>Cook the garlic in a pan until golden brown.</description>
      <duration>2</duration>
      <tools>Pan, Garlic Press</tools>
    </step>
    <step>
      <description>Drain the spaghetti and mix with the egg and cheese mixture.</description>
      <duration>3</duration>
      <tools>Strainer, Spaghetti</tools>
    </step>
    <step>
      <description>Serve immediately and garnish with extra cheese if desired.</description>
      <duration>1</duration>
      <tools>Plate, Cheese Grater</tools>
    </step>
  </steps>
</recipe>