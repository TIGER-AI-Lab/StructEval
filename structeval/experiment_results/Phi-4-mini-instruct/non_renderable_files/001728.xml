<recipe>
  <title>Spicy Chicken Stir-Fry</title>
  <author>
    <name>Alex Johnson</name>
    <role>Chef</role>
  </author>
  <ingredients>
    <ingredient>
      <name>Chicken breast</name>
      <quantity>200</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Garlic</name>
      <quantity>3</quantity>
      <unit>cloves</unit>
    </ingredient>
    <ingredient>
      <name>Red bell pepper</name>
      <quantity>1</quantity>
      <unit>piece</unit>
    </ingredient>
    <ingredient>
      <name>Broccoli</name>
      <quantity>2</quantity>
      <unit>cups</unit>
    </ingredient>
  </ingredients>
  <steps>
    <step>
      <instruction>Cut the chicken breast into small pieces.</instruction>
      <duration_minutes>5</duration_minutes>
      <tools>knife, cutting board</tools>
    </step>
    <step>
      <instruction>Mince the garlic and chop the red bell pepper and broccoli.</instruction>
      <duration_minutes>10</duration_minutes>
      <tools>knife, cutting board</tools>
    </step>
    <step>
      <instruction>Heat oil in a pan and add the chicken pieces.</instruction>
      <duration_minutes>10</duration_minutes>
      <tools>pan, oil</tools>
    </step>
    <step>
      <instruction>Add garlic, bell pepper, and broccoli to the pan.</instruction>
      <duration_minutes>5</duration_minutes>
      <tools>pan, spatula</tools>
    </step>
    <step>
      <instruction>Cook until the chicken is no longer pink and the vegetables are tender.</instruction>
      <duration_minutes>5</duration_minutes>
      <tools>pan, spatula</tools>
    </step>
  </steps>
  <nutrition>
    <calories>350</calories>
    <protein_grams>30</protein_grams>
    <fat_grams>10</fat_grams>
    <carbohydrates_grams>20</carbohydrates_grams>
  </nutrition>
  <metadata>
    <cuisine>Chinese</cuisine>
    <difficulty>Easy</difficulty>
    <published_date>2023-04-01</published_date>
  </metadata>
</recipe>