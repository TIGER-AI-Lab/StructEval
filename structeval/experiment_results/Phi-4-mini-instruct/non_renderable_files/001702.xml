<recipe>
  <title>Quinoa Salad with Lemon Vinaigrette</title>
  <author>
    <name>Jane Doe</name>
    <contact>jane.doe@example.com</contact>
  </author>
  <ingredients>
    <item>
      <name>Quinoa</name>
      <quantity>1 cup</quantity>
      <unit>cups</unit>
    </item>
    <item>
      <name>Cherry Tomatoes</name>
      <quantity>1 cup</quantity>
      <unit>cups</unit>
    </item>
    <item>
      <name>Cucumber</name>
      <quantity>1 medium</quantity>
      <unit>medium</unit>
    </item>
    <item>
      <name>Red Onion</name>
      <quantity>1/4 cup</quantity>
      <unit>cup</unit>
    </item>
    <item>
      <name>Feta Cheese</name>
      <quantity>1/2 cup</quantity>
      <unit>cup</unit>
    </item>
    <item>
      <name>Olive Oil</name>
      <quantity>2 tablespoons</quantity>
      <unit>tablespoons</unit>
    </item>
    <item>
      <name>Lemon Juice</name>
      <quantity>2 tablespoons</quantity>
      <unit>tablespoons</unit>
    </item>
    <item>
      <name>Salt and Pepper</name>
      <quantity>to taste</quantity>
      <unit>to taste</unit>
    </item>
  </ingredients>
  <steps>
    <step>
      <description>Rinse the quinoa under cold water and drain.</description>
      <duration_minutes>5</duration_minutes>
      <tools>colander, strainer</tools>
    </step>
    <step>
      <description>In a large bowl, combine the quinoa, cherry tomatoes, cucumber, and red onion.</description>
      <duration_minutes>5</duration_minutes>
      <tools>large bowl</tools>
    </step>
    <step>
      <description>In a small bowl, whisk together the olive oil, lemon juice, salt, and pepper.</description>
      <duration_minutes>2</duration_minutes>
      <tools>small bowl, whisk</tools>
    </step>
    <step>
      <description>Pour the lemon vinaigrette over the salad and toss to combine.</description>
      <duration_minutes>2</duration_minutes>
      <tools>toss</tools>
    </step>
    <step>
      <description>Garnish with feta cheese and serve.</description>
      <duration_minutes>2</duration_minutes>
      <tools>garnish</tools>
    </step>
  </steps>
