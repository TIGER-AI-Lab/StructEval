<recipe>
  <metadata>
    <name>Spaghetti Carbonara</name>
    <author>Gordon Ramsay</author>
    <cuisine>Italian</cuisine>
    <prepTime>20</prepTime>
    <cookTime>15</cookTime>
    <servings>4</servings>
  </metadata>
  <ingredients>
    <ingredient>
      <name>Spaghetti</name>
      <quantity>400</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Eggs</name>
      <quantity>4</quantity>
      <unit>large</unit>
    </ingredient>
    <ingredient>
      <name>Parmesan Cheese</name>
      <quantity>100</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Garlic</name>
      <quantity>2</quantity>
      <unit>cloves</unit>
    </ingredient>
    <ingredient>
      <name>Pecorino Romano Cheese</name>
      <quantity>50</quantity>
      <unit>grams</unit>
    </ingredient>
  </ingredients>
  <instructions>
    <step order="1">
      <description>Boil the spaghetti in salted water until al dente.</description>
    </step>
    <step order="2">
      <description>In a bowl, whisk the eggs and mix in the grated Parmesan cheese.</description>
    </step>
    <step order="3">
      <description>Cook the garlic in a pan until golden, then remove from heat.</description>
    </step>
    <step order="4">
      <description>Drain the spaghetti and add it to the pan with the garlic.</description>
    </step>
    <step order="5">
      <description>Remove the pan from heat and quickly mix in the egg and cheese mixture.</description>
    </step>
    <step order="6">
      <description>Serve immediately, garnished with additional Parmesan cheese if desired.</description>
    </step>
  </instructions>
  <nutrition>
    <calories>500</calories>
    <protein>20</protein>
    <fat>30</fat>
    <carbohydrates>50</carbohydrates>
  </nutrition>
</recipe>