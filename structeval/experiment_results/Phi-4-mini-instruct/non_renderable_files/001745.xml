<recipe>
  <title>Classic Chocolate Chip Cookies</title>
  <author>
    <name>Jane Doe</name>
    <profileUrl>https://www.janedoe.com</profileUrl>
  </author>
  <ingredients>
    <ingredient>
      <name>All-purpose flour</name>
      <quantity>2</quantity>
      <unit>cups</unit>
    </ingredient>
    <ingredient>
      <name>Baking soda</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </ingredient>
    <ingredient>
      <name>Salt</name>
      <quantity>1/2</quantity>
      <unit>teaspoon</unit>
    </ingredient>
    <ingredient>
      <name>Unsalted butter, softened</name>
      <quantity>1 cup</quantity>
      <unit>cubed</unit>
    </ingredient>
    <ingredient>
      <name>Granulated sugar</name>
      <quantity>3/4 cup</quantity>
      <unit>cup</unit>
    </ingredient>
    <ingredient>
      <name>Brown sugar, packed</name>
      <quantity>3/4 cup</quantity>
      <unit>cup</unit>
    </ingredient>
    <ingredient>
      <name>Vanilla extract</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </ingredient>
    <ingredient>
      <name>Eggs</name>
      <quantity>2</quantity>
      <unit>large</unit>
    </ingredient>
    <ingredient>
      <name>Chocolate chips</name>
      <quantity>2 cups</quantity>
      <unit>cup</unit>
    </ingredient>
  </ingredients>
  <instructions>
    <step>
      <stepNumber>1</stepNumber>
      <description>Preheat the oven to 375 degrees F (190 degrees C).</description>
      <timer>
        <durationMinutes>10</durationMinutes>
        <optional>false</optional>
      </timer>
    </step>
    <step>
      <stepNumber>2</stepNumber>
      <description>In a small bowl, whisk together the flour, baking soda, and salt.</description>
      <timer>
        <durationMinutes>5</durationMinutes>
        <optional>false</optional>
      </timer>
    </step>
    <step>
      <stepNumber>3</stepNumber>
      <description>In a large bowl, beat the butter, granulated sugar, and brown sugar until smooth.</description>
      <timer>
        <durationMinutes>5</durationMinutes>
        <optional>false</optional>
      </timer>
    </step>
    <step>
      <stepNumber>4</stepNumber>
      <description>Add the vanilla extract and eggs to the butter mixture, and beat until well combined.</description>
      <timer>
        <durationMinutes>5</durationMinutes>
        <optional>false</optional>
      </timer>
    </step>
    <step>
      <stepNumber>5</stepNumber>
      <description>Gradually add the flour mixture to the wet ingredients, and mix until just combined.</description>
      <timer>
        <durationMinutes>5</durationMinutes>
        <optional>false</optional>
      </timer>
    </step>
    <step>
      <stepNumber>6</stepNumber>
      <description>Stir in the chocolate chips.</description>
      <timer>
        <durationMinutes>5</durationMinutes>
        <optional>false</optional>
      </timer>
    </step>
    <step>
      <stepNumber>7</stepNumber>
      <description>Drop by rounded tablespoon onto ungreased baking sheets.</description>
      <timer>
        <durationMinutes>10</durationMinutes>
        <optional>false</optional>
      </timer>
    </step>
  </instructions>
  <nutrition>
    <calories>240</calories>
    <fat>8</fat>
    <carbohydrates>30</carbohydrates>
    <protein>4</protein>
  </nutrition>
  <tags>
    <tag>cookies</tag>
    <tag>dessert</tag>
    <tag>chocolate</tag>
  </tags>
</recipe>