<recipe>
  <title>Spicy Avocado Chicken Salad</title>
  <author>
    <name>Alex Johnson</name>
    <profileUrl>https://www.example.com/alex-johnson</profileUrl>
  </author>
  <ingredients>
    <ingredient>
      <name>Chicken breast</name>
      <quantity>2</quantity>
      <unit>pieces</unit>
    </ingredient>
    <ingredient>
      <name>Avocado</name>
      <quantity>1</quantity>
      <unit>whole</unit>
    </ingredient>
    <ingredient>
      <name>Lemon</name>
      <quantity>1</quantity>
      <unit>whole</unit>
    </ingredient>
    <ingredient>
      <name>Red onion</name>
      <quantity>1/2</quantity>
      <unit>cup</unit>
    </ingredient>
    <ingredient>
      <name>Salt</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </ingredient>
    <ingredient>
