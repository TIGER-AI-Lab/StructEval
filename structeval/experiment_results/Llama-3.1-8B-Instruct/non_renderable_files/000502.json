
import json

def extract_artifact_info(text):
    # Assuming the text is in the following format:
    # "Name: Artifact Name, Civilization: Civilization Name, Age: 1000, Materials: Primary Material (Composition Percentage%), Secondary Material, Dimensions: Height (cm) x Width (cm) x Depth (cm), Features: Feature Type 1 - Description 1 - Preservation State 1, Feature Type 2 - Description 2 - Preservation State 2"

    lines = text.split(', ')
    artifact = {}

    for line in lines:
        if 'Name:' in line:
            name = line.split(': ')[1]
            artifact['name'] = name
        elif 'Civilization:' in line:
            civilization = line.split(': ')[1]
            artifact['origin'] = {'civilization': civilization}
        elif 'Age:' in line:
            age = int(line.split(': ')[1])
            artifact['origin']['estimated_age'] = age
        elif 'Materials:' in line:
            materials = line.split(': ')[1]
            materials_list = materials.split(' (')
            primary_material = materials_list[0]
            if len(materials_list) > 1:
                composition_percentage = materials_list[1].split(')')[0]
                secondary_material = None
            else:
                composition_percentage = None
                secondary_material = None
            artifact['materials'] = {
                'primary': primary_material,
                'secondary': secondary_material,
                'composition_percentage': composition_percentage
            }
        elif 'Dimensions:' in line:
            dimensions = line.split(': ')[1]
            dimensions_list = dimensions.split(' x ')
            height_cm = int(dimensions_list[0])
            width_cm = int(dimensions_list[1].split(' x ')[0])
            depth_cm = int(dimensions_list[1].split(' x ')[1])
            artifact['dimensions'] = {
                'height_cm': height_cm,
                'width_cm': width_cm,
                'depth_cm': depth_cm
            }
        elif 'Features:' in line:
            features = line.split(': ')[1]
            features_list = features.split(', ')
            feature1 = {
                'type': features_list[0].split(' - ')[0],
                'description': features_list[0].split(' - ')[1],
                'preservation_state': features_list[0].split(' - ')[2]
            }
            feature2 = {
                'type': features_list[1].split(' - ')[0],
                'description': features_list[1].split(' - ')[1],
                'preservation_state': features_list[1].split(' - ')[2]
            }
            artifact['features'] = [feature1, feature2]

    return json.dumps(artifact, indent=4)

text = "Name: Artifact Name, Civilization: Civilization Name, Age: 1000, Materials: Primary Material (Composition Percentage%), Secondary Material, Dimensions: Height (cm) x Width (cm) x Depth (cm), Features: Feature Type 1 - Description 1 - Preservation State 1, Feature Type 2 - Description 2 - Preservation State 2"
print(extract_artifact_info(text))
