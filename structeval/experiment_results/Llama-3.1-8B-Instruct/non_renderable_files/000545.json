
import json

def extract_artifact_info(description):
    artifact = {
        "name": "Unknown Artifact",
        "origin": {
            "civilization": "Unknown Civilization",
            "epoch": "Unknown Epoch"
        },
        "dimensions": {
            "height_cm": 0,
            "width_cm": 0,
            "depth_cm": 0
        },
        "materials": [
            {
                "type": "Unknown Material",
                "provenance": "Unknown Provenance"
            },
            {
                "type": "Unknown Material",
                "provenance": "Unknown Provenance"
            }
        ],
        "features": [
            {
                "description": "Unknown Feature",
                "estimated_age_years": 0
            }
        ],
        "inscriptions": {
            "language": "Unknown Language",
            "text": "Unknown Text",
            "translation": "Unknown Translation"
        }
    }

    # Extract name
    name = description.split("name:")[1].split(",")[0].strip()
    artifact["name"] = name

    # Extract civilization and epoch
    origin = description.split("origin:")[1].split(",")[0].strip()
    civilization, epoch = origin.split(";")
    artifact["origin"]["civilization"] = civilization.strip()
    artifact["origin"]["epoch"] = epoch.strip()

    # Extract dimensions
    dimensions = description.split("dimensions:")[1].split(",")[0].strip()
    height, width, depth = dimensions.split(";")
    artifact["dimensions"]["height_cm"] = int(height.split("=")[1].strip())
    artifact["dimensions"]["width_cm"] = int(width.split("=")[1].strip())
    artifact["dimensions"]["depth_cm"] = int(depth.split("=")[1].strip())

    # Extract materials
    materials = description.split("materials:")[1].split("], [")[0].strip()
    materials = materials.replace("[", "").replace("]", "").split(", ")
    for i, material in enumerate(materials):
        type, provenance = material.split(";")
        artifact["materials"][i]["type"] = type.strip()
        artifact["materials"][i]["provenance"] = provenance.strip()

    # Extract features
    features = description.split("features:")[1].split("], [")[0].strip()
    features = features.replace("[", "").replace("]", "").split(", ")
    for i, feature in enumerate(features):
        description, estimated_age_years = feature.split(";")
        artifact["features"][i]["description"] = description.strip()
        artifact["features"][i]["estimated_age_years"] = int(estimated_age_years.split("=")[1].strip())

    # Extract inscriptions
    inscriptions = description.split("inscriptions:")[1].split(",")[0].strip()
    language, text, translation = inscriptions.split(";")
    artifact["inscriptions"]["language"] = language.strip()
    artifact["inscriptions"]["text"] = text.strip()
    artifact["inscriptions"]["translation"] = translation.strip()

    return json.dumps(artifact, indent=4)

description = """
name: Ancient Vase
origin: Greek; Bronze Age
dimensions: height=20; width=15; depth=10
materials: clay; local soil, bronze; imported from Egypt
features: handle; 500 years old, glaze; 200 years old
inscriptions: Greek; "This is a vase", English; "This is a vase"
"""

print(extract_artifact_info(description))
