
import json

def generate_artifact_summary(description):
    artifact = {
        'name': 'Unknown Artifact',
        'discovery_date': '2022-01-01',
        'origin': {
            'civilization': 'Ancient Civilization',
            'era': 'Ancient Era'
        },
        'materials': [
            {
                'type': 'Material 1',
                'purity': 100.0
            },
            {
                'type': 'Material 2',
                'purity': 100.0
            }
        ],
        'dimensions': {
            'height_cm': 10,
            'width_cm': 5,
            'depth_cm': 2
        },
        'inscriptions': [
            {
                'language': 'Language 1',
                'translation': 'Translation 1'
            },
            {
                'language': 'Language 2',
                'translation': 'Translation 2'
            }
        ],
        'current_location': {
            'museum': 'Museum of Art',
            'display_case': 'Display Case 1'
        }
    }

    # Update artifact summary based on description
    if 'official designation' in description:
        artifact['name'] = description.split('official designation: ')[1]
    if 'discovery date' in description:
        artifact['discovery_date'] = description.split('discovery date: ')[1]
    if 'civilization' in description:
        artifact['origin']['civilization'] = description.split('civilization: ')[1]
    if 'era' in description:
        artifact['origin']['era'] = description.split('era: ')[1]
    if 'material' in description:
        material = description.split('material: ')[1]
        if 'purity' in description:
            purity = description.split('purity: ')[1]
            if 'Material 1' in material:
                artifact['materials'][0]['type'] = material
                artifact['materials'][0]['purity'] = float(purity)
            elif 'Material 2' in material:
                artifact['materials'][1]['type'] = material
                artifact['materials'][1]['purity'] = float(purity)
    if 'height' in description:
        height = description.split('height: ')[1]
        if 'width' in description:
            width = description.split('width: ')[1]
            if 'depth' in description:
                depth = description.split('depth: ')[1]
                artifact['dimensions']['height_cm'] = int(height)
                artifact['dimensions']['width_cm'] = int(width)
                artifact['dimensions']['depth_cm'] = int(depth)
    if 'inscription' in description:
        inscription = description.split('inscription: ')[1]
        if 'language' in description:
            language = description.split('language: ')[1]
            if 'translation' in description:
                translation = description.split('translation: ')[1]
                artifact['inscriptions'].append({
                    'language': language,
                    'translation': translation
                })
    if 'museum' in description:
        artifact['current_location']['museum'] = description.split('museum: ')[1]
    if 'display case' in description:
        artifact['current_location']['display_case'] = description.split('display case: ')[1]

    return json.dumps(artifact, indent=4)

# Example usage
description = """
official designation: Ancient Artifact
discovery date: 2022-01-01
civilization: Ancient Civilization
era: Ancient Era
material: Material 1 purity: 100
material: Material 2 purity: 100
height: 10 width: 5 depth: 2
inscription: Language 1 translation: Translation 1
inscription: Language 2 translation: Translation 2
museum: Museum of Art
display case: Display Case 1
"""

print(generate_artifact_summary(description))
