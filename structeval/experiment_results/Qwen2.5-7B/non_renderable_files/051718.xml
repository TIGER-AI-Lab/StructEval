
import json
import xml.etree.ElementTree as ET

json_data = '''
{
  "museum": {
    "name": "Museum of Imaginary Artifacts",
    "location": {
      "city": "Eldoria",
      "country": "Fantasia"
    },
    "exhibits": {
      "exhibit": [
        {
          "title": "Chrono Compass",
          "year": 1823,
          "artists": {
            "artist": [
              {
                "name": "Lira Voss",
                "nationality": "Eldorian"
              }
            ]
          }
        },
        {
          "title": "Whispering Lantern",
          "year": 1901,
          "artists": {
            "artist": [
              {
                "name": "Tomaso Finch",
                "nationality": "Fantastian"
              }
            ]
          }
        }
      ]
    }
  }
}
'''

def json_to_xml(json_data):
    root = ET.Element("root")
    museum = ET.SubElement(root, "museum")
    museum.set("name", json_data["museum"]["name"])
    location = ET.SubElement(museum, "location")
    ET.SubElement(location, "city").text = json_data["museum"]["location"]["city"]
    ET.SubElement(location, "country").text = json_data["museum"]["location"]["country"]
    exhibits = ET.SubElement(museum, "exhibits")
    for exhibit in json_data["museum"]["exhibits"]["exhibit"]:
        exhibit_element = ET.SubElement(exhibits, "exhibit")
        ET.SubElement(exhibit_element, "title").text = exhibit["title"]
        ET.SubElement(exhibit_element, "year").text = str(exhibit["year"])
        artists = ET.SubElement(exhibit_element, "artists")
        for artist in exhibit["artists"]["artist"]:
            artist_element = ET.SubElement(artists, "artist")
            ET.SubElement(artist_element, "name").text = artist["name"]
            ET.SubElement(artist_element, "nationality").text = artist["nationality"]
    return ET.tostring(root, encoding="unicode")

xml_data = json_to_xml(json.loads(json_data))
print(xml_data)
