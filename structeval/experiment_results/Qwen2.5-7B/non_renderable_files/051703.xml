
import json
import xml.etree.ElementTree as ET

json_data = '''
{
  "spaceStation": {
    "name": "Aurora Outpost",
    "location": {
      "planet": "Kepler-442b",
      "galaxy": "Andromeda"
    },
    "crewMembers": {
      "crewMember": [
        { "name": "Dr. Linnea Vega", "role": "Botanist" },
        { "name": "Commander Ryo Takeda", "role": "Pilot" }
      ]
    },
    "laboratories": {
      "laboratory": [
        {
          "type": "Hydroponics",
          "experiments": {
            "experiment": [
              "Algae Growth",
              "Microgravity Farming"
            ]
          }
        }
      ]
    }
  }
}
'''

def json_to_xml(json_str):
    data = json.loads(json_str)
    root = ET.Element("root")
    space_station = ET.SubElement(root, "spaceStation")
    for key, value in data["spaceStation"].items():
        if isinstance(value, dict):
            sub_element = ET.SubElement(space_station, key)
            for sub_key, sub_value in value.items():
                if isinstance(sub_value, list):
                    for item in sub_value:
                        ET.SubElement(sub_element, sub_key).text = item
                else:
                    ET.SubElement(sub_element, sub_key).text = str(sub_value)
        else:
            ET.SubElement(space_station, key).text = str(value)
    return ET.tostring(root, encoding="unicode")

xml_output = json_to_xml(json_data)
print(xml_output)
