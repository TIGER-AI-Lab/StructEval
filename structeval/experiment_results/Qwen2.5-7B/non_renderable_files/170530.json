import json
import xml.etree.ElementTree as ET

xml_data = """
<spaceZoo>
  <aliens>
    <alien>
      <name>Zorglax</name>
      <species>Quasarite</species>
      <favoriteSnacks>
        <snack>Plasma Puffs</snack>
        <snack>Neutron Noodles</snack>
      </favoriteSnacks>
    </alien>
    <alien>
      <name>Blip</name>
      <species>Astroblink</species>
      <favoriteSnacks>
        <snack>Comet Candy</snack>
        <snack>Starlight Syrup</snack>
      </favoriteSnacks>
    </alien>
  </aliens>
  <galacticCaretaker>
    <name>Captain Celestia</name>
    <yearsExperience>42</yearsExperience>
  </galacticCaretaker>
</spaceZoo>
"""

def xml_to_json(xml_string):
    root = ET.fromstring(xml_string)
    json_data = {}
    for child in root:
        json_data[child.tag] = {}
        for subchild in child:
            if subchild.tag == 'favoriteSnacks':
                json_data[child.tag][subchild.tag] = [snack.text for snack in subchild]
            else:
                json_data[child.tag][subchild.tag] = subchild.text
    return json.dumps(json_data, indent=2)

json_data = xml_to_json(xml_data)
print(json_data)