
import json
import xml.etree.ElementTree as ET

json_data = '''
{
  "galacticCarnival": {
    "eventName": "Nebula Spectacular",
    "location": {
      "planet": "Zyphron",
      "galaxy": "Andromeda"
    },
    "attractions": {
      "attraction": [
        { "name": "Zero-Gravity Ferris Wheel", "type": "ride" },
        { "name": "Alien Petting Zoo", "type": "exhibit" }
      ]
    },
    "schedule": {
      "day": [
        {
          "date": "3024-07-01",
          "activities": {
            "activity": [
              "Meteor Shower Parade",
              "Cosmic Cotton Candy Eating Contest"
            ]
          }
        },
        {
          "date": "3024-07-02",
          "activities": {
            "activity": [
              "Starlight Maze" ]
          }
        }
      ]
    }
  }
}
'''

data = json.loads(json_data)
root = ET.Element("root")

def json_to_xml(json_data, parent):
    if isinstance(json_data, dict):
        for key, value in json_data.items():
            if isinstance(value, dict) or isinstance(value, list):
                child = ET.SubElement(parent, key)
                json_to_xml(value, child)
            else:
                ET.SubElement(parent, key).text = str(value)
    elif isinstance(json_data, list):
        for item in json_data:
            json_to_xml(item, parent)

json_to_xml(data, root)

tree = ET.ElementTree(root)
tree.write("output.xml")
