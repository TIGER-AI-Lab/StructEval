
<recipe>
  <title>Spaghetti Carbonara</title>
  <author>
    <name>John Doe</name>
    <contact>
      <email>john.doe@example.com</email>
      <phone>+1 202-555-0175</phone>
    </contact>
  </author>
  <ingredients>
    <ingredient>
      <name>Spaghetti</name>
      <quantity>400</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Guanciale</name>
      <quantity>150</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Eggs</name>
      <quantity>4</quantity>
      <unit>pieces</unit>
    </ingredient>
    <ingredient>
      <name>Parmesan cheese</name>
      <quantity>50</quantity>
      <unit>grams</unit>
    </ingredient>
  </ingredients>
  <instructions>
    <step>
      <order>1</order>
      <description>Boil spaghetti according to package instructions.</description>
      <duration>
        <minutes>10</minutes>
      </duration>
    </step>
    <step>
      <order>2</order>
      <description>Cook guanciale in a pan until crispy.</description>
      <duration>
        <minutes>5</minutes>
      </duration>
    </step>
    <step>
      <order>3</order>
      <description>Whisk eggs and Parmesan cheese together.</description>
      <duration>
        <minutes>0</minutes>
      </duration>
    </step>
    <step>
      <order>4</order>
      <description>Add cooked spaghetti to the pan with guanciale and toss.</description>
      <duration>
        <minutes>2</minutes>
      </duration>
    </step>
    <step>
      <order>5</order>
      <description>Pour egg and cheese mixture over spaghetti and toss until well combined.</description>
      <duration>
        <minutes>1</minutes>
      </duration>
    </step>
  </instructions>
  <nutrition>
    <calories>1200</calories>
    <fat>
      <grams>50</grams>
      <type>saturated</type>
    </fat>
    <carbohydrates>
      <grams>60</grams>
    </carbohydrates>
    <protein>
      <grams>40</grams>
    </protein>
  </nutrition>
</recipe>
