
import json
import xml.etree.ElementTree as ET

json_data = '''
{
  "spaceStation": {
    "name": "Aurora Outpost",
    "modules": {
      "module": [
        {
          "type": "Habitation",
          "crewMembers": {
            "crewMember": [
              { "name": "Dr. Vega Lin", "role": "Biologist" },
              { "name": "Samir Patel", "role": "Engineer" }
            ]
          }
        },
        {
          "type": "Research",
          "crewMembers": {
            "crewMember": [
              { "name": "Lena Torres", "role": "Physicist" }
            ]
          }
        }
      ]
    }
  }
}
'''

def json_to_xml(json_str):
    data = json.loads(json_str)
    root = ET.Element("root")
    space_station = ET.SubElement(root, "spaceStation")
    name = ET.SubElement(space_station, "name")
    name.text = data["spaceStation"]["name"]
    modules = ET.SubElement(space_station, "modules")
    for module in data["spaceStation"]["modules"]["module"]:
        module_elem = ET.SubElement(modules, "module")
        type_elem = ET.SubElement(module_elem, "type")
        type_elem.text = module["type"]
        crew_members = ET.SubElement(module_elem, "crewMembers")
        for crew_member in module["crewMembers"]["crewMember"]:
            crew_member_elem = ET.SubElement(crew_members, "crewMember")
            name_elem = ET.SubElement(crew_member_elem, "name")
            name_elem.text = crew_member["name"]
            role_elem = ET.SubElement(crew_member_elem, "role")
            role_elem.text = crew_member["role"]
    return ET.tostring(root, encoding="unicode")

xml_output = json_to_xml(json_data)
print(xml_output)
