
<recipe>
  <title>Spaghetti Carbonara</title>
  <metadata>
    <author>
      <name>John Doe</name>
      <contact>john.doe@example.com</contact>
    </author>
    <cuisine>Italian</cuisine>
    <difficulty>Easy</difficulty>
    <lastUpdated>2022-01-01</lastUpdated>
  </metadata>
  <nutrition>
    <calories>500</calories>
    <fat>20</fat>
    <protein>25</protein>
    <carbohydrates>40</carbohydrates>
  </nutrition>
  <ingredients>
    <item>
      <name>Spaghetti</name>
      <quantity>400</quantity>
      <unit>grams</unit>
    </item>
    <item>
      <name>Guanciale</name>
      <quantity>100</quantity>
      <unit>grams</unit>
    </item>
    <item>
      <name>Eggs</name>
      <quantity>4</quantity>
      <unit>pieces</unit>
    </item>
    <item>
      <name>Parmesan cheese</name>
      <quantity>50</quantity>
      <unit>grams</unit>
    </item>
    <item>
      <name>Black pepper</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </item>
  </ingredients>
  <steps>
    <step>
      <description>Boil water and cook spaghetti according to package instructions.</description>
      <duration>10</duration>
      <tools>pot, pasta strainer</tools>
    </step>
    <step>
      <description>Cook guanciale in a pan until crispy.</description>
      <duration>5</duration>
      <tools>pan</tools>
    </step>
    <step>
      <description>Beat eggs with Parmesan cheese and black pepper.</description>
      <duration>2</duration>
      <tools>spoon</tools>
    </step>
    <step>
      <description>Add cooked spaghetti to the pan with guanciale and toss to combine.</description>
      <duration>3</duration>
      <tools>spoon</tools>
    </step>
    <step>
      <description>Pour egg mixture over spaghetti and toss to coat.</description>
      <duration>2</duration>
      <tools>spoon</tools>
    </step>
    <step>
      <description>Season with salt and pepper to taste.</description>
      <duration>1</duration>
      <tools>spoon</tools>
    </step>
  </steps>
</recipe>
