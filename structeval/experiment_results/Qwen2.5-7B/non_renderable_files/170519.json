
import xmltodict
import json

xml_data = """
<galaxy>
  <name>Andromeda</name>
  <stars>
    <star>
      <name>Alpha Centauri</name>
      <planets>
        <planet>
          <name>Proxima b</name>
          <moons>
            <moon>Selene</moon>
            <moon>Luna</moon>
          </moons>
        </planet>
        <planet>
          <name>Proxima c</name>
          <moons>
            <moon>Umbra</moon>
          </moons>
        </planet>
      </planets>
    </star>
    <star>
      <name>Betelgeuse</name>
      <planets>
        <planet>
          <name>Betel One</name>
          <moons>
            <moon>Crimson</moon>
          </moons>
        </planet>
      </planets>
    </star>
  </stars>
</galaxy>
"""

def xml_to_json(xml_string):
    data_dict = xmltodict.parse(xml_string)
    json_data = json.dumps(data_dict)
    return json_data

json_data = xml_to_json(xml_data)
print(json_data)
