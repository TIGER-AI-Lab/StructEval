
import yaml
from xml.etree import ElementTree as ET

def yaml_to_xml(yaml_data):
    root = ET.Element("library")
    for section in yaml_data["library"]:
        section_elem = ET.SubElement(root, "section")
        section_elem.set("name", section["section"]["name"])
        for shelf in section["section"]["shelves"]["shelf"]:
            shelf_elem = ET.SubElement(section_elem, "shelf")
            shelf_elem.set("name", shelf["name"])
            for book in shelf["books"]["book"]:
                book_elem = ET.SubElement(shelf_elem, "book")
                book_elem.set("title", book["title"])
                book_elem.set("author", book["author"])
    return ET.tostring(root, encoding="unicode")

yaml_data = {
    "library": [
        {
            "section": {
                "name": "Cryptozoology",
                "shelves": {
                    "shelf": [
                        {
                            "name": "Mysterious Mammals",
                            "books": {
                                "book": [
                                    {"title": "The Yeti Files", "author": "Dr. Snowman"},
                                    {"title": "Chupacabra Chronicles", "author": "Maria Luna"}
                                ]
                            }
                        },
                        {
                            "name": "Legendary Birds",
                            "books": {
                                "book": [
                                    {"title": "Thunderbird Sightings", "author": "R.J. Storm"},
                                    {"title": "Phoenix: Fact or Fiction?", "author": "Ash Ember"}
                                ]
                            }
                        }
                    ]
                }
            }
        }
    ]
}

xml_data = yaml_to_xml(yaml_data)
print(xml_data)
