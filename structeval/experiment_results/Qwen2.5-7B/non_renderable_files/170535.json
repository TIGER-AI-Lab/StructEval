
import xmltodict
import json

xml_data = """
<planetarium>
  <planets>
    <planet>
      <name>Zephyra</name>
      <type>Gas Giant</type>
      <moons>
        <moon>
          <moon_name>Cirrus</moon_name>
          <diameter_km>1500</diameter_km>
          <features>
            <feature>Ice Caves</feature>
            <feature>Volcanoes</feature>
          </features>
        </moon>
        <moon>
          <moon_name>Stratus</moon_name>
          <diameter_km>800</diameter_km>
          <features>
            <feature>Crystal Forests</feature>
          </features>
        </moon>
      </moons>
    </planet>
    <planet>
      <name>Solara</name>
      <type>Terrestrial</type>
      <moons>
        <moon>
          <moon_name>Lumen</moon_name>
          <diameter_km>500</diameter_km>
          <features>
            <feature>Glowstone Canyons</feature>
          </features>
        </moon>
      </moons>
    </planet>
  </planets>
</planetarium>
"""

def xml_to_json(xml_string):
    data_dict = xmltodict.parse(xml_string)
    json_data = json.dumps(data_dict)
    return json_data

json_data = xml_to_json(xml_data)
print(json_data)
