
import xmltodict
import json

xml_data = """
<galaxy>
  <name>Andromeda</name>
  <constellations>
    <constellation>
      <name>Pegasus</name>
      <stars>
        <star>
          <name>Markab</name>
          <type>Blue Giant</type>
        </star>
        <star>
          <name>Algenib</name>
          <type>Variable Star</type>
        </star>
      </stars>
    </constellation>
    <constellation>
      <name>Cassiopeia</name>
      <stars>
        <star>
          <name>Shedir</name>
          <type>Giant</type>
        </star>
        <star>
          <name>Caph</name>
          <type>F-Type Star</type>
        </star>
      </stars>
    </constellation>
  </constellations>
</galaxy>
"""

def xml_to_json(xml_string):
    data_dict = xmltodict.parse(xml_string)
    json_data = json.dumps(data_dict)
    return json_data

json_data = xml_to_json(xml_data)
print(json_data)
