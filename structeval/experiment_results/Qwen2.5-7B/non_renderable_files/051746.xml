import json
import xml.etree.ElementTree as ET

json_data = '''
{
  "galaxy": {
    "name": "Andromeda",
    "constellations": {
      "constellation": [
        {
          "name": "Cassiopeia",
          "stars": {
            "star": [
              { "name": "Schedar", "type": "Giant" },
              { "name": "Caph", "type": "Subgiant" }
            ]
          }
        },
        {
          "name": "Perseus",
          "stars": {
            "star": [
              { "name": "Algol", "type": "Eclipsing Binary" },
              { "name": "Mirfak", "type": "Supergiant" }
            ]
          }
        }
      ]
    }
  }
}
'''

def json_to_xml(json_data):
    data = json.loads(json_data)
    root = ET.Element("root")
    galaxy = ET.SubElement(root, "galaxy")
    galaxy_name = ET.SubElement(galaxy, "name")
    galaxy_name.text = data["galaxy"]["name"]
    constellations = ET.SubElement(galaxy, "constellations")
    for constellation in data["galaxy"]["constellations"]["constellation"]:
        const = ET.SubElement(constellations, "constellation")
        const_name = ET.SubElement(const, "name")
        const_name.text = constellation["name"]
        stars = ET.SubElement(const, "stars")
        for star in constellation["stars"]["star"]:
            st = ET.SubElement(stars, "star")
            st_name = ET.SubElement(st, "name")
            st_name.text = star["name"]
            st_type = ET.SubElement(st, "type")
            st_type.text = star["type"]
    return ET.tostring(root, encoding="unicode")

xml_data = json_to_xml(json_data)
print(xml_data)
