
import xml.etree.ElementTree as ET

# Create the root element
planet = ET.Element("planet")

# Add attributes to the root element
planet.set("name", "Fictional Planet")
planet.set("mass", "1.2")

# Add child elements
atmosphere = ET.SubElement(planet, "atmosphere")
composition = ET.SubElement(atmosphere, "composition")
composition.text = "Nitrogen, Oxygen, Argon"
pressure = ET.SubElement(atmosphere, "pressure")
pressure.text = "1.5"

layers = ET.SubElement(atmosphere, "layers")
layer = ET.SubElement(layers, "layer")
layer.set("name", "Troposphere")
layer.set("altitude_range", "0-12")
temperature = ET.SubElement(layer, "temperature")
temperature.text = "15"

moons = ET.SubElement(planet, "moons")
moon = ET.SubElement(moons, "moon")
moon.set("name", "Moon A")
moon.set("diameter", "3000")
discovery = ET.SubElement(moon, "discovery")
discovery.set("discovered_by", "John Doe")
discovery.set("discovery_date", "2021-01-01")
orbital_period = ET.SubElement(planet, "orbital_period")
orbital_period.text = "365.25"

rings = ET.SubElement(planet, "rings")
ring = ET.SubElement(rings, "ring")
ring.set("composition", "Ice and rock")
ring.set("radius", "50000")

# Create the XML tree
tree = ET.ElementTree(planet)

# Write the XML tree to a file
tree.write("planet.xml")
