
import csv
import xml.etree.ElementTree as ET

root = ET.Element("planets")

with open('planets.csv', 'r') as file:
    reader = csv.DictReader(file)
    for row in reader:
        planet = ET.SubElement(root, "planet")
        for key, value in row.items():
            if key == "atmosphere.pressure":
                pressure = ET.SubElement(planet, "atmosphere_pressure")
                pressure.text = value
            elif key == "atmosphere.composition":
                composition = ET.SubElement(planet, "atmosphere_composition")
                composition.text = value
            elif key == "gas_1":
                gas1 = ET.SubElement(planet, "gas1")
                gas1.text = value
            elif key == "percentage_1":
                percentage1 = ET.SubElement(planet, "percentage1")
                percentage1.text = value
            elif key == "gas_2":
                gas2 = ET.SubElement(planet, "gas2")
                gas2.text = value
            elif key == "percentage_2":
                percentage2 = ET.SubElement(planet, "percentage2")
                percentage2.text = value
            elif key == "moons":
                moons = ET.SubElement(planet, "moons")
                moons.text = value
            else:
                element = ET.SubElement(planet, key)
                element.text = value

tree = ET.ElementTree(root)
tree.write("planets.xml")
