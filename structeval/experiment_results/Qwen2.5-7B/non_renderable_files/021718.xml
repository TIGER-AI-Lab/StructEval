
import csv
import xml.etree.ElementTree as ET

root = ET.Element("planets")

with open('planets.csv', 'r') as file:
    reader = csv.DictReader(file)
    for row in reader:
        planet = ET.SubElement(root, "planet")
        for key, value in row.items():
            if key == "planet.moons":
                moons = value.split(";")
                for moon in moons:
                    moon_data = moon.split(",")
                    moon_element = ET.SubElement(planet, "moon")
                    ET.SubElement(moon_element, "name").text = moon_data[0]
                    ET.SubElement(moon_element, "radius_km").text = moon_data[1]
                    ET.SubElement(moon_element, "discovered_by").text = moon_data[2]
            else:
                ET.SubElement(planet, key).text = value

tree = ET.ElementTree(root)
tree.write("planets.xml")
