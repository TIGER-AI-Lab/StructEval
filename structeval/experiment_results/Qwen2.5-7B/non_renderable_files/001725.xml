
import xml.etree.ElementTree as ET

# Create the root element
galaxy = ET.Element("galaxy", name="Andromeda", discoveryYear="1923", type="Spiral")

# Create the stars element
stars = ET.SubElement(galaxy, "stars")

# Create the first star element
star1 = ET.SubElement(stars, "star", name="Alpha Andromedae", spectralClass="G2V", ageMillionYears="4600", massSolar="1.02", massEarths="330.00")
# Create the planets element for the first star
planets1 = ET.SubElement(star1, "planets")
# Create the first planet element for the first star
planet1 = ET.SubElement(planets1, "planet", name="Andromeda b", hasLife="false", orbitalPeriod="1.88")
# Create the moons element for the first planet
moons1 = ET.SubElement(planet1, "moons")
# Create the first moon element for the first planet
moon1 = ET.SubElement(moons1, "moon", name="Andromeda I", diameterKm="3474", discoveryDate="1999-01-01", ageMillionYears="4500", composition="H2O, N2, CH4", pressureAtm="0.01")

# Create the second star element
star2 = ET.SubElement(stars, "star", name="Beta Andromedae", spectralClass="F8V", ageMillionYears="3500", massSolar="1.10", massEarths="250.00")
# Create the planets element for the second star
planets2 = ET.SubElement(star2, "planets")
# Create the first planet element for the second star
planet2 = ET.SubElement(planets2, "planet", name="Andromeda c", hasLife="true", orbitalPeriod="10.95")
# Create the moons element for the first planet
moons2 = ET.SubElement(planet2, "moons")
# Create the first moon element for the first planet
moon2 = ET.SubElement(moons2, "moon", name="Andromeda II", diameterKm="2000", discoveryDate="2005-06-12", ageMillionYears="3400", composition="CO2, N2, Ar", pressureAtm="0.05")

# Create the XML tree
tree = ET.ElementTree(galaxy)

# Write the XML tree to a file
tree.write("galaxy.xml")
