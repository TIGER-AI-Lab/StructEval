
import yaml
from xml.etree import ElementTree as ET

def yaml_to_xml(yaml_data):
    root = ET.Element("museum")
    for key, value in yaml_data.items():
        if key == "exhibits":
            for exhibit in value:
                exhibit_elem = ET.SubElement(root, "exhibit")
                for sub_key, sub_value in exhibit.items():
                    if sub_key == "artifacts":
                        artifacts_elem = ET.SubElement(exhibit_elem, "artifacts")
                        for artifact in sub_value:
                            artifact_elem = ET.SubElement(artifacts_elem, "artifact")
                            artifact_elem.text = artifact
                    else:
                        ET.SubElement(exhibit_elem, sub_key).text = str(sub_value)
        else:
            ET.SubElement(root, key).text = str(value)
    return ET.tostring(root, encoding="unicode")

yaml_data = yaml.safe_load("""
museum:
  name: The Imaginarium of Lost Socks
  location:
    city: Whimsyville
    country: Neverlandia
  exhibits:
    exhibit:
      - title: The Great Sock Migration
        year: 1892
        artifacts:
          artifact:
            - Polka-dot Sock
            - Striped Sock
      - title: The Mystery of the Missing Match
        year: 1923
        artifacts:
          artifact:
            - Left Sock Only
            - Unpaired Argyle
""")

xml_data = yaml_to_xml(yaml_data)
print(xml_data)
