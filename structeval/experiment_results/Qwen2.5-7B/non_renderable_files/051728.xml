
import json
import xml.etree.ElementTree as ET

json_data = '''
{
  "galaxy": {
    "name": "Andromeda",
    "starSystems": {
      "starSystem": [
        {
          "name": "Alpha Centauri",
          "planets": {
            "planet": [
              { "name": "Proxima b", "hasLife": false },
              { "name": "Proxima c", "hasLife": false }
            ]
          }
        },
        {
          "name": "Sirius",
          "planets": {
            "planet": [
              { "name": "Sirius A-1", "hasLife": true },
              { "name": "Sirius A-2", "hasLife": false }
            ]
          }
        }
      ]
    }
  }
}
'''

def json_to_xml(json_str):
    data = json.loads(json_str)
    root = ET.Element("root")
    galaxy = ET.SubElement(root, "galaxy")
    galaxy.set("name", data["galaxy"]["name"])
    starSystems = ET.SubElement(galaxy, "starSystems")
    for starSystem in data["galaxy"]["starSystems"]["starSystem"]:
        ss = ET.SubElement(starSystems, "starSystem")
        ss.set("name", starSystem["name"])
        planets = ET.SubElement(ss, "planets")
        for planet in starSystem["planets"]["planet"]:
            p = ET.SubElement(planets, "planet")
            p.set("name", planet["name"])
            p.set("hasLife", str(planet["hasLife"]))
    return ET.tostring(root, encoding='unicode')

xml_data = json_to_xml(json_data)
print(xml_data)
