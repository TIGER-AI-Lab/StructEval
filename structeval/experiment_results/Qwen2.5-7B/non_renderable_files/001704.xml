
<recipe>
  <title>Spaghetti Carbonara</title>
  <author>
    <name>John Doe</name>
    <contact>
      <email>john.doe@example.com</email>
    </contact>
  </author>
  <ingredients>
    <ingredient>
      <name>Pasta</name>
      <quantity>400</quantity>
      <unit>grams</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Eggs</name>
      <quantity>4</quantity>
      <unit>pieces</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Guanciale or Pancetta</name>
      <quantity>200</quantity>
      <unit>grams</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Grated Parmigiano-Reggiano Cheese</name>
      <quantity>50</quantity>
      <unit>grams</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Black Pepper</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
      <optional>false</optional>
    </ingredient>
  </ingredients>
  <instructions>
    <step>
      <description>Boil water and cook pasta according to package instructions.</description>
      <duration_minutes>10</duration_minutes>
      <tools>
        <tool name="Pasta Pot" required="true"/>
        <tool name="Colander" required="true"/>
      </tools>
    </step>
    <step>
      <description>Cook Guanciale or Pancetta in a pan until crispy.</description>
      <duration_minutes>5</duration_minutes>
      <tools>
        <tool name="Frying Pan" required="true"/>
      </tools>
    </step>
    <step>
      <description>Beat eggs with grated cheese and black pepper.</description>
      <duration_minutes>0</duration_minutes>
    </step>
    <step>
      <description>Add cooked pasta to the pan with Guanciale or Pancetta and pour the egg mixture over it.</description>
      <duration_minutes>2</duration_minutes>
      <tools>
        <tool name="Mixing Spoon" required="true"/>
      </tools>
    </step>
    <step>
      <description>Stir everything together and serve hot.</description>
      <duration_minutes>0</duration_minutes>
    </step>
  </instructions>
  <nutrition>
    <calories>1200</calories>
    <fat_grams>50</fat_grams>
    <protein_grams>40</protein_grams>
  </nutrition>
  <tags>
    <tag>Italian</tag>
    <tag>Dinner</tag>
  </tags>
</recipe>
