      <stepNumber>2</stepNumber>
      <description>Cook guanciale in a pan until crispy.</description>
      <timer>
        <seconds>600</seconds>
      </timer>
    </instruction>
    <instruction>
      <stepNumber>3</stepNumber>
      <description>Beat eggs with Parmesan cheese.</description>
      <timer>
        <seconds>0</seconds>
      </timer>
    </instruction>
    <instruction>
      <stepNumber>4</stepNumber>
      <description>Add cooked spaghetti to the pan with guanciale and pour egg mixture over it.</description>
      <timer>
        <seconds>300</seconds>
      </timer>
    </instruction>
    <instruction>
      <stepNumber>5</stepNumber>
      <description>Mix everything together and serve hot.</description>
      <timer>
        <seconds>0</seconds>
      </timer>
    </instruction>
