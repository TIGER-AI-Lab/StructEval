    <contact>john.doe@example.com</contact>
  </author>
  <ingredients>
    <ingredient>
      <name>Spaghetti</name>
      <quantity>400</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Guanciale</name>
      <quantity>150</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Eggs</name>
      <quantity>4</quantity>
      <unit>pieces</unit>
    </ingredient>
    <ingredient>
      <name>Parmesan Cheese</name>
      <quantity>50</quantity>
      <unit>grams</unit>
    </ingredient>
  </ingredients>
  <instructions>
    <instruction>
      <stepNumber>1</stepNumber>
