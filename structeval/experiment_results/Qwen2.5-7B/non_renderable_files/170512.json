    <country>Imaginaria</country>
  </location>
  <exhibits>
    <exhibit>
      <title>Clockwork Giraffe</title>
      <artist>Luna Dali</artist>
      <year>2042</year>
    </exhibit>
    <exhibit>
      <title>Floating Teacups</title>
      <artist>Max Magritte</artist>
      <year>2037</year>
