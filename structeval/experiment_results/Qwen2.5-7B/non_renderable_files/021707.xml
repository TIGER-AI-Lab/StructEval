
import csv
import xml.etree.ElementTree as ET

def csv_to_xml(csv_file, xml_file):
    tree = ET.ElementTree()
    root = ET.Element("planets")
    tree._setroot(root)

    with open(csv_file, 'r') as csvfile:
        reader = csv.DictReader(csvfile)
        for row in reader:
            planet = ET.SubElement(root, "planet")
            for key, value in row.items():
                if key == "moons":
                    for i, moon in enumerate(value.split(',')):
                        moon_element = ET.SubElement(planet, "moon")
                        moon_element.text = moon
                else:
                    element = ET.SubElement(planet, key)
                    element.text = value

    tree.write(xml_file)

csv_to_xml("planets.csv", "planets.xml")
