
import yaml
from xml.etree import ElementTree as ET

def convert_yaml_to_xml(yaml_data):
    data = yaml.safe_load(yaml_data)
    root = ET.Element("museum")
    name = ET.SubElement(root, "name")
    name.text = data["name"]
    location = ET.SubElement(root, "location")
    city = ET.SubElement(location, "city")
    city.text = data["location"]["city"]
    galaxy = ET.SubElement(location, "galaxy")
    galaxy.text = data["location"]["galaxy"]
    exhibits = ET.SubElement(root, "exhibits")
    for exhibit in data["exhibits"]:
        exhibit_elem = ET.SubElement(exhibits, "exhibit")
        title = ET.SubElement(exhibit_elem, "title")
        title.text = exhibit["title"]
        type_elem = ET.SubElement(exhibit_elem, "type")
        type_elem.text = exhibit["type"]
        origin = ET.SubElement(exhibit_elem, "origin")
        planet = ET.SubElement(origin, "planet")
        planet.text = exhibit["origin"]["planet"]
    xml_str = ET.tostring(root, encoding="unicode")
    return xml_str

yaml_data = """
museum:
  name: Intergalactic Oddities Museum
  location:
    city: Nebula Prime
    galaxy: Andromeda
  exhibits:
    exhibit:
      - title: Singing Meteorite
        type: Audio Sculpture
        origin:
          planet: Gliese 581g
      - title: Antigravity Teacup
        type: Kinetic Installation
        origin:
          planet: Xandar
"""

xml_data = convert_yaml_to_xml(yaml_data)
print(xml_data)
