python
import json
import xml.etree.ElementTree as ET

xml_data = """
<ecosystem>
  <planets>
    <planet>
      <name>Zephyria</name>
      <creatures>
        <creature>
          <species>Cloudwhale</species>
          <population>1200</population>
        </creature>
        <creature>
          <species>Skyvine</species>
          <population>32000</population>
        </creature>
      </creatures>
    </planet>
    <planet>
      <name>Pyron</name>
      <creatures>
        <creature>
          <species>Emberfox</species>
          <population>450</population>
        </creature>
        <creature>
          <species>Lavafin</species>
          <population>8000</population>
        </creature>
      </creatures>
    </planet>
  </planets>
</ecosystem>
"""

root = ET.fromstring(xml_data)
json_data = {
    "ecosystem": {
        "planets": [
            {
                "planet": {
                    "name": planet.find("name").text,
                    "creatures": [
                        {
                            "creature": {
                                "species": creature.find("species").text,
                                "population": int(creature.find("population").text)
                            }
                        }
                        for creature in planet.find("creatures")
                    ]
                }
            }
            for planet in root.find("planets")
        ]
    }
}

print(json.dumps(json_data, indent=2))