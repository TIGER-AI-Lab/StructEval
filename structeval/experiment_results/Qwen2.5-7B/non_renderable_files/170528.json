    <country>Fantasia</country>
  </location>
  <exhibits>
    <exhibit>
      <title>The Clockwork Fish</title>
      <artist>Dr. Cogsworth</artist>
      <year>1899</year>
    </exhibit>
    <exhibit>
      <title>Invisible Portrait</title>
      <artist>Luna Mirage</artist>
