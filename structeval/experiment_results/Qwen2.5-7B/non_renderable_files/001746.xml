
import xml.etree.ElementTree as ET

# Create the root element
recipe = ET.Element("recipe")

# Set the attributes for the recipe
recipe.set("name", "Spaghetti Carbonara")
recipe.set("author", "John Doe")
recipe.set("cuisine", "Italian")
recipe.set("prepTime", "PT20M")
recipe.set("cookTime", "PT10M")
recipe.set("servings", "4")

# Create the ingredients element
ingredients = ET.SubElement(recipe, "ingredients")

# Create the first ingredient element
ingredient1 = ET.SubElement(ingredients, "ingredient")
ingredient1.set("name", "Spaghetti")
ingredient1.set("quantity", "400")
ingredient1.set("unit", "g")

# Create the instructions element
instructions = ET.SubElement(recipe, "instructions")

# Create the first instruction element
instruction1 = ET.SubElement(instructions, "step")
instruction1.set("order", "1")
instruction1.set("description", "Cook spaghetti according to package instructions.")
instruction1.set("duration", "PT10M")

# Create the nutrition element
nutrition = ET.SubElement(recipe, "nutrition")

# Set the attributes for the nutrition
nutrition.set("calories", "400")
nutrition.set("protein", "20")
nutrition.set("fat", "15")

# Create the XML tree
tree = ET.ElementTree(recipe)

# Write the XML tree to a file
tree.write("recipe.xml")
