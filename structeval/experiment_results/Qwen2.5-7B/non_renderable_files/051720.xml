
import json
import xml.etree.ElementTree as ET

json_data = '''
{
  "library": {
    "section": [
      {
        "name": "Speculative Fiction",
        "book": [
          {
            "title": "The Infinite Paradox",
            "authors": {
              "author": ["L. Quasar", "M. Nova"]
            },
            "publishedYear": 2042
          },
          {
            "title": "Chronicles of the Clockwork Whale",
            "authors": {
              "author": ["S. Gears"]
            },
            "publishedYear": 2038
          }
        ]
      },
      {
        "name": "Quantum Poetry",
        "book": [
          {
            "title": "Entangled Verses",
            "authors": {
              "author": ["A. Photon"]
            },
            "publishedYear": 2050
          }
        ]
      }
    ]
  }
}
'''

data = json.loads(json_data)

root = ET.Element("library")

for section in data["library"]["section"]:
    section_element = ET.SubElement(root, "section")
    name_element = ET.SubElement(section_element, "name")
    name_element.text = section["name"]
    for book in section["book"]:
        book_element = ET.SubElement(section_element, "book")
        title_element = ET.SubElement(book_element, "title")
        title_element.text = book["title"]
        authors_element = ET.SubElement(book_element, "authors")
        for author in book["authors"]["author"]:
            author_element = ET.SubElement(authors_element, "author")
            author_element.text = author
        published_year_element = ET.SubElement(book_element, "publishedYear")
        published_year_element.text = str(book["publishedYear"])

tree = ET.ElementTree(root)
tree.write("output.xml")
