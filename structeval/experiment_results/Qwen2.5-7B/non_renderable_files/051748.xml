
import json
import xml.etree.ElementTree as ET

json_data = '''
{
  "museum": {
    "name": "Museum of Imaginary Beasts",
    "location": {
      "city": "Eldoria",
      "country": "Fabeland"
    },
    "exhibits": {
      "exhibit": [
        {
          "title": "Dragons of the North",
          "year": 1875,
          "artifacts": {
            "artifact": [
              { "name": "Frostwing Scale", "material": "Ice Crystal" },
              { "name": "Firebreath Claw", "material": "Obsidian" }
            ]
          }
        },
        {
          "title": "Phoenix Legends",
          "year": 1923,
          "artifacts": {
            "artifact": [
              { "name": "Ash Feather", "material": "Volcanic Ash" }
            ]
          }
        }
      ]
    }
  }
}
'''

def json_to_xml(json_str):
    root = ET.Element('root')
    museum = ET.SubElement(root, 'museum')
    museum.set('name', 'Museum of Imaginary Beasts')
    location = ET.SubElement(museum, 'location')
    ET.SubElement(location, 'city').text = 'Eldoria'
    ET.SubElement(location, 'country').text = 'Fabeland'
    exhibits = ET.SubElement(museum, 'exhibits')
    for exhibit in json_str['exhibits']['exhibit']:
        exhibit_elem = ET.SubElement(exhibits, 'exhibit')
        ET.SubElement(exhibit_elem, 'title').text = exhibit['title']
        ET.SubElement(exhibit_elem, 'year').text = str(exhibit['year'])
        artifacts = ET.SubElement(exhibit_elem, 'artifacts')
        for artifact in exhibit['artifacts']['artifact']:
            artifact_elem = ET.SubElement(artifacts, 'artifact')
            ET.SubElement(artifact_elem, 'name').text = artifact['name']
            ET.SubElement(artifact_elem, 'material').text = artifact['material']
    return ET.tostring(root, encoding='unicode')

xml_data = json_to_xml(json.loads(json_data))
print(xml_data)
