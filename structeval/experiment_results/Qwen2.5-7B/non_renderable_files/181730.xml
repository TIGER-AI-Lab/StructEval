
import yaml
from xml.etree import ElementTree as ET

def convert_yaml_to_xml(yaml_data):
    data = yaml.safe_load(yaml_data)
    root = ET.Element("insectarium")
    name = ET.SubElement(root, "name")
    name.text = data["name"]
    location = ET.SubElement(root, "location")
    city = ET.SubElement(location, "city")
    city.text = data["location"]["city"]
    country = ET.SubElement(location, "country")
    country.text = data["location"]["country"]
    exhibits = ET.SubElement(root, "exhibits")
    for exhibit in data["exhibits"]["exhibit"]:
        exhibit_elem = ET.SubElement(exhibits, "exhibit")
        name_elem = ET.SubElement(exhibit_elem, "name")
        name_elem.text = exhibit["name"]
        species_elem = ET.SubElement(exhibit_elem, "species")
        species_elem.text = exhibit["species"]
        population_elem = ET.SubElement(exhibit_elem, "population")
        population_elem.text = str(exhibit["population"])
    xml_str = ET.tostring(root, encoding="unicode")
    return xml_str

yaml_data = """
insectarium:
  name: The Whispering Wings
  location:
    city: Luminara
    country: Fantasia
  exhibits:
    exhibit:
      - name: Firefly Grotto
        species: Luciola splendidus
        population: 120
      - name: Beetle Burrow
        species: Dynastes hercules
        population: 8
"""

xml_data = convert_yaml_to_xml(yaml_data)
print(xml_data)
