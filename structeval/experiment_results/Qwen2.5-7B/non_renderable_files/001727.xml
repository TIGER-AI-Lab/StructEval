
<recipe>
  <name>Spaghetti Carbonara</name>
  <author>John Doe</author>
  <cuisine>Italian</cuisine>
  <prepTime>20</prepTime>
  <cookTime>10</cookTime>
  <servings>4</servings>
  <ingredients>
    <ingredient>
      <name>Spaghetti</name>
      <quantity>500</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Eggs</name>
      <quantity>4</quantity>
      <unit>pieces</unit>
    </ingredient>
    <ingredient>
      <name>Pancetta</name>
      <quantity>200</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Grated Parmesan Cheese</name>
      <quantity>50</quantity>
      <unit>grams</unit>
    </ingredient>
  </ingredients>
  <instructions>
    <step>
      <order>1</order>
      <description>Boil water and cook spaghetti according to package instructions.</description>
    </step>
    <step>
      <order>2</order>
      <description>Cook pancetta in a pan until crispy.</description>
    </step>
    <step>
      <order>3</order>
      <description>Beat eggs and grated Parmesan cheese together in a bowl.</description>
    </step>
    <step>
      <order>4</order>
      <description>Add cooked pancetta to the egg mixture and stir well.</description>
    </step>
    <step>
      <order>5</order>
      <description>Drain spaghetti and add it to the egg and pancetta mixture. Toss to combine.</description>
    </step>
  </instructions>
  <nutrition>
    <calories>1200</calories>
    <protein>40</protein>
    <fat>30</fat>
    <carbohydrates>100</carbohydrates>
  </nutrition>
</recipe>
