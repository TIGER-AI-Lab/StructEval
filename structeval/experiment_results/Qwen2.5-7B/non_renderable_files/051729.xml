
import json
import xml.etree.ElementTree as ET

json_data = '''
{
  "zoo": {
    "animals": {
      "animal": [
        {
          "name": "Bubbles",
          "species": "Elephant",
          "tricks": {
            "trick": ["Painting", "Balancing"]
          }
        },
        {
          "name": "Milo",
          "species": "Capuchin Monkey",
          "tricks": {
            "trick": ["Juggling", "Riding a bike"]
          }
        }
      ]
    },
    "staff": {
      "staffMember": [
        {
          "name": "Lara",
          "role": "Zookeeper"
        },
        {
          "name": "Samir",
          "role": "Veterinarian"
        }
      ]
    }
  }
}
'''

data = json.loads(json_data)

root = ET.Element("zoo")

for animal in data["zoo"]["animals"]["animal"]:
    animal_elem = ET.SubElement(root, "animal")
    ET.SubElement(animal_elem, "name").text = animal["name"]
    ET.SubElement(animal_elem, "species").text = animal["species"]
    tricks_elem = ET.SubElement(animal_elem, "tricks")
    for trick in animal["tricks"]["trick"]:
        ET.SubElement(tricks_elem, "trick").text = trick

for staff_member in data["zoo"]["staff"]["staffMember"]:
    staff_elem = ET.SubElement(root, "staffMember")
    ET.SubElement(staff_elem, "name").text = staff_member["name"]
    ET.SubElement(staff_elem, "role").text = staff_member["role"]

tree = ET.ElementTree(root)
tree.write("output.xml")
