
import json
import xml.etree.ElementTree as ET

json_data = '''
{
  "galaxy": {
    "name": "Andromeda",
    "starSystems": {
      "starSystem": [
        {
          "name": "Alpha-1",
          "planets": {
            "planet": [
              { "name": "Xylon", "hasLife": true },
              { "name": "Boreas", "hasLife": false }
            ]
          }
        },
        {
          "name": "Beta-2",
          "planets": {
            "planet": [
              { "name": "Ceres", "hasLife": false }
            ]
          }
        }
      ]
    }
  }
}
'''

def json_to_xml(json_str):
    root = ET.Element('root')
    data = json.loads(json_str)
    galaxy = ET.SubElement(root, 'galaxy')
    name = ET.SubElement(galaxy, 'name')
    name.text = data['galaxy']['name']
    starSystems = ET.SubElement(galaxy, 'starSystems')
    for starSystem in data['galaxy']['starSystems']['starSystem']:
        ss = ET.SubElement(starSystems, 'starSystem')
        name = ET.SubElement(ss, 'name')
        name.text = starSystem['name']
        planets = ET.SubElement(ss, 'planets')
        for planet in starSystem['planets']['planet']:
            p = ET.SubElement(planets, 'planet')
            name = ET.SubElement(p, 'name')
            name.text = planet['name']
            hasLife = ET.SubElement(p, 'hasLife')
            hasLife.text = str(planet['hasLife']).lower()
    return ET.tostring(root, encoding='unicode')

xml_data = json_to_xml(json_data)
print(xml_data)
