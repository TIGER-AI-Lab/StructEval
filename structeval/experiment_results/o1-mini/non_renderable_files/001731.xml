  <ingredients>
    <ingredient>
      <name>Chicken Breast</name>
      <quantity>500</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Garlic Cloves</name>
      <quantity>4</quantity>
      <unit>pieces</unit>
    </ingredient>
    <ingredient>
      <name>Red Chili</name>
      <quantity>2</quantity>
      <unit>pieces</unit>
    </ingredient>
    <ingredient>
      <name>Thai Basil Leaves</name>
      <quantity>30</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Fish Sauce</name>
      <quantity>3</quantity>
      <unit>tablespoons</unit>
    </ingredient>
    <ingredient>
      <name>Soy Sauce</name>
      <quantity>2</quantity>
      <unit>tablespoons</unit>
    </ingredient>
    <ingredient>
      <name>Sugar</name>
      <quantity>1</quantity>
      <unit>tablespoon</unit>
    </ingredient>
    <ingredient>
      <name>Vegetable Oil</name>
      <quantity>2</quantity>
      <unit>tablespoons</unit>
    </ingredient>
  </ingredients>
  <steps>
    <step>
      <instruction>Slice the chicken breast into thin strips.</instruction>
      <duration_minutes>5</duration_minutes>
    </step>
    <step>
      <instruction>Mince the garlic cloves and slice the red chilies.</instruction>
      <duration_minutes>3</duration_minutes>
    </step>
    <step>
      <instruction>Heat vegetable oil in a wok over medium-high heat.</instruction>
      <duration_minutes>2</duration_minutes>
    </step>
    <step>
      <instruction>Add garlic and red chilies to the wok and sautÃ© until fragrant.</instruction>
      <duration_minutes>2</duration_minutes>
    </step>
    <step>
      <instruction>Add the chicken strips and cook until no longer pink.</instruction>
      <duration_minutes>7</duration_minutes>
    </step>
    <step>
      <instruction>Stir in fish sauce, soy sauce, and sugar. Mix well.</instruction>
      <duration_minutes>3</duration_minutes>
    </step>
    <step>
      <instruction>Add Thai basil leaves and cook until they wilt.</instruction>
      <duration_minutes>2</duration_minutes>
    </step>
    <step>
      <instruction>Serve hot with steamed jasmine rice.</instruction>
      <duration_minutes>1</duration_minutes>
    </step>
  </steps>
