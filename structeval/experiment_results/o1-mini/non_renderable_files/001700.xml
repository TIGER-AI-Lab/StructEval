<?xml version="1.0" encoding="UTF-8"?>
<recipe>
    <title>Chocolate Chip Cookies</title>
    <author>
        <name>Jane Doe</name>
        <contact>
            <email>jane.doe@example.com</email>
        </contact>
    </author>
    <ingredients>
        <ingredient>
            <name>All-purpose flour</name>
            <quantity>200</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Granulated sugar</name>
            <quantity>150</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Butter</name>
            <quantity>100</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Chocolate chips</name>
            <quantity>100</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Egg</name>
            <quantity>1</quantity>
            <unit>piece</unit>
        </ingredient>
        <ingredient>
            <name>Baking soda</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </ingredient>
        <ingredient>
            <name>Salt</name>
            <quantity>0.5</quantity>
            <unit>teaspoon</unit>
        </ingredient>
    </ingredients>
    <steps>
        <step>
            <order>1</order>
            <instruction>Preheat the oven to 180Â°C (350Â°F).</instruction>
            <duration>
                <minutes>10</minutes>
            </duration>
        </step>
        <step>
            <order>2</order>
            <instruction>In a bowl, cream together the butter and sugar until smooth.</instruction>
            <duration>
                <minutes>5</minutes>
            </duration>
        </step>
        <step>
            <order>3</order>
            <instruction>Beat in the egg until well blended.</instruction>
            <duration>
                <minutes>2</minutes>
            </duration>
        </step>
        <step>
            <order>4</order>
            <instruction>Combine the flour, baking soda, and salt; gradually blend into the butter mixture.</instruction>
            <duration>
                <minutes>3</minutes>
            </duration>
        </step>
        <step>
            <order>5</order>
            <instruction>Stir in the chocolate chips.</instruction>
            <duration>
                <minutes>1</minutes>
            </duration>
        </step>
        <step>
            <order>6</order>
            <instruction>Drop by rounded spoonfuls onto ungreased baking sheets.</instruction>
            <duration>
                <minutes>5</minutes>
            </duration>
        </step>
        <step>
            <order>7</order>
            <instruction>Bake for 10-12 minutes or until edges are golden brown.</instruction>
            <duration>
                <minutes>12</minutes>
            </duration>
        </step>
    </steps>
