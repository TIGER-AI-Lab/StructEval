<?xml version="1.0" encoding="UTF-8"?>
<recipe>
    <title>Spaghetti Bolognese</title>
    <author>
        <name>Jane Doe</name>
        <profileUrl>https://www.example.com/authors/jane-doe</profileUrl>
    </author>
    <ingredients>
        <ingredient>
            <name>Spaghetti</name>
            <quantity>200</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Ground Beef</name>
            <quantity>250</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Tomato Sauce</name>
            <quantity>1.5</quantity>
            <unit>cups</unit>
        </ingredient>
        <ingredient>
            <name>Onion</name>
            <quantity>1</quantity>
            <unit>medium</unit>
        </ingredient>
        <ingredient>
            <name>Garlic Cloves</name>
            <quantity>2</quantity>
            <unit>units</unit>
        </ingredient>
        <ingredient>
            <name>Olive Oil</name>
            <quantity>2</quantity>
            <unit>tablespoons</unit>
        </ingredient>
        <ingredient>
            <name>Salt</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </ingredient>
        <ingredient>
            <name>Black Pepper</name>
            <quantity>0.5</quantity>
            <unit>teaspoon</unit>
        </ingredient>
        <ingredient>
            <name>Parmesan Cheese</name>
            <quantity>50</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Basil Leaves</name>
            <quantity>10</quantity>
            <unit>leaves</unit>
        </ingredient>
    </ingredients>
    <instructions>
        <step>
            <stepNumber>1</stepNumber>
            <description>Heat olive oil in a large pan over medium heat.</description>
            <timer>
                <durationMinutes>2</durationMinutes>
                <optional>false</optional>
            </timer>
        </step>
        <step>
            <stepNumber>2</stepNumber>
            <description>Add chopped onions and garlic. SautÃ© until translucent.</description>
            <timer>
                <durationMinutes>5</durationMinutes>
                <optional>false</optional>
            </timer>
        </step>
        <step>
            <stepNumber>3</stepNumber>
            <description>Introduce ground beef to the pan and cook until browned.</description>
            <timer>
                <durationMinutes>7</durationMinutes>
                <optional>false</optional>
            </timer>
        </step>
        <step>
            <stepNumber>4</stepNumber>
            <description>Pour in tomato sauce, add salt and black pepper. Let it simmer.</description>
            <timer>
                <durationMinutes>15</durationMinutes>
                <optional>true</optional>
            </timer>
        </step>
        <step>
            <stepNumber>5</stepNumber>
            <description>Boil spaghetti according to package instructions.</description>
            <timer>
                <durationMinutes>10</durationMinutes>
                <optional>false</optional>
            </timer>
        </step>
        <step>
            <stepNumber>6</stepNumber>
            <description>Drain spaghetti and mix with the Bolognese sauce.</description>
            <timer>
                <durationMinutes>2</durationMinutes>
                <optional>true</optional>
            </timer>
        </step>
        <step>
            <stepNumber>7</stepNumber>
            <description>Serve hot, topped with grated Parmesan cheese and fresh basil leaves.</description>
            <timer>
                <durationMinutes>1</durationMinutes>
                <optional>true</optional>
            </timer>
        </step>
    </instructions>
