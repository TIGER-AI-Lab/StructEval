
<?xml version="1.0" encoding="UTF-8"?>
<recipe>
    <title>Spicy Thai Green Curry</title>
    <author>
        <name>Jane Doe</name>
        <role>Chef</role>
    </author>
    <ingredients>
        <ingredient>
            <name>Chicken Breast</name>
            <quantity>500</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Green Curry Paste</name>
            <quantity>3</quantity>
            <unit>tablespoons</unit>
        </ingredient>
        <ingredient>
            <name>Coconut Milk</name>
            <quantity>400</quantity>
            <unit>ml</unit>
        </ingredient>
        <ingredient>
            <name>Bell Peppers</name>
            <quantity>2</quantity>
            <unit>pieces</unit>
        </ingredient>
        <ingredient>
            <name>Basil Leaves</name>
            <quantity>1</quantity>
            <unit>bunch</unit>
        </ingredient>
    </ingredients>
    <steps>
        <step>
            <instruction>Slice the chicken breast into thin strips.</instruction>
            <duration_minutes>10</duration_minutes>
            <tools>Knife, Cutting Board</tools>
        </step>
        <step>
            <instruction>Heat oil in a pan and sautÃ© the green curry paste until fragrant.</instruction>
            <duration_minutes>5</duration_minutes>
            <tools>Pan, Spoon</tools>
        </step>
        <step>
            <instruction>Add the chicken strips and cook until browned.</instruction>
            <duration_minutes>15</duration_minutes>
            <tools>Pan, Spoon</tools>
        </step>
        <step>
            <instruction>Pour in the coconut milk and bring to a simmer.</instruction>
            <duration_minutes>10</duration_minutes>
            <tools>Pan, Spoon</tools>
        </step>
        <step>
            <instruction>Add sliced bell peppers and cook for another 5 minutes.</instruction>
            <duration_minutes>5</duration_minutes>
            <tools>Pan, Spoon</tools>
        </step>
        <step>
            <instruction>Garnish with fresh basil leaves before serving.</instruction>
            <duration_minutes>2</duration_minutes>
            <tools>Knife</tools>
        </step>
    </steps>
