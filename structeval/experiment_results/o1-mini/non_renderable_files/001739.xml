<recipe>
    <title>Spaghetti Carbonara</title>
    <author>
        <name>Jane Doe</name>
        <profileUrl>https://www.example.com/authors/jane-doe</profileUrl>
    </author>
    <ingredients>
        <ingredient>
            <name>Spaghetti</name>
            <quantity>200</quantity>
            <unit>grams</unit>
            <optional>false</optional>
        </ingredient>
        <ingredient>
            <name>Eggs</name>
            <quantity>4</quantity>
            <unit>units</unit>
            <optional>false</optional>
        </ingredient>
        <ingredient>
            <name>Pecorino Cheese</name>
            <quantity>50</quantity>
            <unit>grams</unit>
            <optional>true</optional>
        </ingredient>
    </ingredients>
    <steps>
        <step>
            <order>1</order>
            <instruction>Boil the spaghetti in salted water until al dente.</instruction>
            <timer>
                <seconds>600</seconds>
            </timer>
            <notes>Stir occasionally to prevent sticking.</notes>
        </step>
        <step>
            <order>2</order>
            <instruction>Mix eggs and cheese in a bowl.</instruction>
            <timer>
                <seconds>120</seconds>
            </timer>
            <notes>Ensure the mixture is well combined.</notes>
        </step>
    </steps>
    <metadata>
        <cuisine>Italian</cuisine>
        <prepTimeMinutes>20</prepTimeMinutes>
        <tags>
            <tag>quick</tag>
            <tag>comfort food</tag>
        </tags>
    </metadata>
    <nutrition>
        <calories>550</calories>
    </nutrition>
</recipe>