
<?xml version="1.0" encoding="UTF-8"?>
<recipe>
    <title>Spaghetti Carbonara</title>
    <author>
        <name>Jane Smith</name>
        <contact>
            <email>jane.smith@example.com</email>
        </contact>
    </author>
    <ingredients>
        <ingredient>
            <name>Spaghetti</name>
            <quantity>200</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Pancetta</name>
            <quantity>100</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Parmesan Cheese</name>
            <quantity>50</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Eggs</name>
            <quantity>2</quantity>
            <unit>pieces</unit>
        </ingredient>
        <ingredient>
            <name>Black Pepper</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </ingredient>
    </ingredients>
    <steps>
        <step>
            <description>Cook the spaghetti in a large pot of boiling salted water until al dente.</description>
            <duration>
                <minutes>10</minutes>
            </duration>
            <tools>
                <tool>
                    <toolName>Large Pot</toolName>
                    <required>true</required>
                </tool>
                <tool>
                    <toolName>Colander</toolName>
                    <required>true</required>
                </tool>
            </tools>
        </step>
        <step>
            <description>In a separate pan, cook the pancetta until crispy.</description>
            <duration>
                <minutes>5</minutes>
            </duration>
            <tools>
                <tool>
                    <toolName>Frying Pan</toolName>
                    <required>true</required>
                </tool>
                <tool>
                    <toolName>Spatula</toolName>
                    <required>true</required>
                </tool>
            </tools>
        </step>
        <step>
            <description>Beat the eggs in a bowl, then mix in the grated Parmesan cheese and black pepper.</description>
            <duration>
                <minutes>3</minutes>
            </duration>
            <tools>
                <tool>
                    <toolName>Mixing Bowl</toolName>
                    <required>true</required>
                </tool>
                <tool>
                    <toolName>Whisk</toolName>
                    <required>false</required>
                </tool>
            </tools>
        </step>
        <step>
            <description>Combine the cooked spaghetti with the pancetta and remove from heat. Quickly stir in the egg and cheese mixture.</description>
            <duration>
                <minutes>2</minutes>
            </duration>
            <tools>
                <tool>
                    <toolName>Large Pan</toolName>
                    <required>true</required>
                </tool>
                <tool>
                    <toolName>Tongs</toolName>
                    <required>false</required>
                </tool>
            </tools>
        </step>
    </steps>
    <nutrition>
        <calories>600</calories>
        <fat>
            <grams>20</grams>
        </fat>
        <protein>
            <grams>25</grams>
        </protein>
    </nutrition>
    <metadata>
        <cuisine>Italian</cuisine>
        <difficulty>medium</difficulty>
        <published date="2023-10-01"/>
    </metadata>
</recipe>
