<recipe>
  <title>Spaghetti Carbonara</title>
  <description>Classic Italian pasta dish with eggs, pancetta, and pecorino romano cheese.</description>
  <cuisine>Italian</cuisine>
  <servings>2</servings>
  <prepTime>PT10M</prepTime>
  <cookTime>PT15M</cookTime>
  <ingredients>
    <ingredient>
      <name>Spaghetti</name>
      <quantity>200.0</quantity>
      <unit>grams</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Pancetta</name>
      <quantity>100.0</quantity>
      <unit>grams</unit>
