<recipe>
  <name>Spaghetti Carbonara</name>
  <author>Chef John</author>
  <cuisine>Italian</cuisine>
  <prepTime>PT15M</prepTime>
  <cookTime>PT20M</cookTime>
  <servings>4</servings>
  <ingredients>
    <ingredient>
      <name>Spaghetti</name>
      <quantity>400</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Guanciale</name>
      <quantity>100</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Eggs</name>
      <quantity>4</quantity>
      <unit>large</unit>
    </ingredient>
    <ingredient>
      <name>Pecorino Romano cheese</name>
      <quantity>50</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Black pepper</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </ingredient>
  </ingredients>
  <instructions>
    <step>
      <order>1</order>
      <description>Cook spaghetti according to package directions.</description>
      <duration>PT10M</duration>
    </step>
    <step>
      <order>2</order>
      <description>While pasta is cooking, fry guanciale until crispy.</description>
      <duration>PT8M</duration>
    </step>
    <step>
      <order>3</order>
      <description>Whisk eggs, cheese, and pepper together.</description>
      <duration>PT2M</duration>
    </step>
    <step>
      <order>4</order>
      <description>Combine pasta, guanciale, and egg mixture. Toss to coat.</description>
      <duration>PT2M</duration>
    </step>
  </instructions>
  <nutrition>
    <calories>600</calories>
    <protein>25</protein>
    <fat>30</fat>
  </nutrition>
</recipe>