<recipe>
  <name>Spaghetti Carbonara</name>
  <author>Chef John</author>
  <cuisine>Italian</cuisine>
  <prepTime>10</prepTime>
  <cookTime>15</cookTime>
  <servings>4</servings>
  <ingredients>
    <ingredient>
      <name>Spaghetti</name>
      <quantity>400</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Guanciale</name>
      <quantity>100</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Eggs</name>
      <quantity>4</quantity>
      <unit>large</unit>
    </ingredient>
    <ingredient>
      <name>Pecorino Romano cheese</name>
      <quantity>50</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Black pepper</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </ingredient>
  </ingredients>
  <instructions>
    <step>
      <order>1</order>
      <description>Cook spaghetti according to package directions.</description>
    </step>
    <step>
      <order>2</order>
      <description>While pasta is cooking, dice guanciale and fry until crispy.</description>
    </step>
    <step>
      <order>3</order>
      <description>Whisk eggs, grated Pecorino Romano, and black pepper in a bowl.</description>
    </step>
    <step>
      <order>4</order>
      <description>Drain pasta and add it to the pan with the guanciale.</description>
    </step>
    <step>
      <order>5</order>
      <description>Remove pan from heat and quickly pour in the egg mixture, tossing constantly to create a creamy sauce.</description>
    </step>
    <step>
      <order>6</order>
      <description>Serve immediately.</description>
    </step>
  </instructions>
  <nutrition>
    <calories>600</calories>
    <protein>25.5</protein>
    <fat>20</fat>
    <carbohydrates>75</carbohydrates>
  </nutrition>
</recipe>