<recipe>
    <title>Galactic Guacamole</title>
    <author>
        <name>Cosmo Kramer</name>
        <contact>
            <email>kramer@example.com</email>
        </contact>
    </author>
    <ingredients>
        <ingredient>
            <name>Avocados</name>
            <quantity>3</quantity>
            <unit>pieces</unit>
        </ingredient>
        <ingredient>
            <name>Red Onion</name>
            <quantity>0.5</quantity>
            <unit>cup</unit>
        </ingredient>
        <ingredient>
            <name>Lime Juice</name>
            <quantity>2</quantity>
            <unit>tablespoons</unit>
        </ingredient>
        <ingredient>
            <name>Cilantro</name>
            <quantity>0.25</quantity>
            <unit>cup</unit>
        </ingredient>
        <ingredient>
            <name>Salt</name>
            <quantity>0.5</quantity>
            <unit>teaspoon</unit>
        </ingredient>
    </ingredients>
    <steps>
        <step>
            <instruction>Mash avocados in a bowl.</instruction>
            <duration>PT5M</duration>
            <tip>Use a fork for a chunkier guacamole.</tip>
        </step>
        <step>
            <instruction>Dice red onion and add to the bowl.</instruction>
            <duration>PT3M</duration>
            <tip>Finely dice for a smoother texture.</tip>
        </step>
        <step>
            <instruction>Stir in lime juice, cilantro, and salt.</instruction>
            <duration>PT2M</duration>
            <tip>Adjust seasoning to taste.</tip>
        </step>
    </steps>
    <nutrition>
        <calories>250</calories>
        <fat>20</fat>
        <protein>3</protein>
        <carbohydrates>15</carbohydrates>
    </nutrition>
    <metadata>
        <cuisine>Mexican</cuisine>
        <difficulty>easy</difficulty>
        <tags>
            <label>appetizer</label>
            <label>vegan</label>
            <label>gluten-free</label>
        </tags>
    </metadata>
</recipe>