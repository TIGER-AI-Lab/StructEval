<recipe>
  <title>Classic Chocolate Chip Cookies</title>
  <author>
    <name>John Doe</name>
    <profileUrl>https://example.com/johndoe</profileUrl>
  </author>
  <ingredients>
    <ingredient>
      <name>All-purpose flour</name>
      <quantity>3</quantity>
      <unit>cups</unit>
    </ingredient>
    <ingredient>
      <name>Baking soda</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </ingredient>
    <ingredient>
      <name>Salt</name>
      <quantity>0.5</quantity>
      <unit>teaspoon</unit>
    </ingredient>
    <ingredient>
      <name>Unsalted butter</name>
      <quantity>1</quantity>
      <unit>cup</unit>
    </ingredient>
    <ingredient>
      <name>Granulated sugar</name>
      <quantity>1</quantity>
      <unit>cup</unit>
    </ingredient>
    <ingredient>
      <name>Brown sugar</name>
      <quantity>1</quantity>
      <unit>cup</unit>
    </ingredient>
    <ingredient>
      <name>Large eggs</name>
      <quantity>2</quantity>
      <unit>eggs</unit>
    </ingredient>
    <ingredient>
      <name>Vanilla extract</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </ingredient>
    <ingredient>
      <name>Chocolate chips</name>
      <quantity>2</quantity>
      <unit>cups</unit>
    </ingredient>
  </ingredients>
  <instructions>
    <instruction>
      <stepNumber>1</stepNumber>
      <description>Preheat oven to 375Â°F (190Â°C).</description>
      <timer>
        <durationMinutes>10</durationMinutes>
        <optional>false</optional>
      </timer>
    </instruction>
    <instruction>
      <stepNumber>2</stepNumber>
      <description>Cream together butter, granulated sugar, and brown sugar until smooth.</description>
      <timer>
        <durationMinutes>5</durationMinutes>
        <optional>true</optional>
      </timer>
    </instruction>
    <instruction>
      <stepNumber>3</stepNumber>
      <description>Beat in eggs, then stir in vanilla extract.</description>
      <timer>
        <durationMinutes>2</durationMinutes>
        <optional>true</optional>
      </timer>
    </instruction>
    <instruction>
      <stepNumber>4</stepNumber>
      <description>Dissolve the baking soda in hot water and add this to the batter along with salt.</description>
      <timer>
        <durationMinutes>1</durationMinutes>
        <optional>true</optional>
      </timer>
    </instruction>
    <instruction>
      <stepNumber>5</stepNumber>
      <description>Stir in the flour and the chocolate chips.</description>
      <timer>
        <durationMinutes>3</durationMinutes>
        <optional>true</optional>
      </timer>
    </instruction>
    <instruction>
      <stepNumber>6</stepNumber>
      <description>Drop rounded tablespoons of dough onto baking sheets.</description>
      <timer>
        <durationMinutes>5</durationMinutes>
        <optional>true</optional>
      </timer>
    </instruction>
    <instruction>
      <stepNumber>7</stepNumber>
      <description>Bake for 9-11 minutes, or until golden brown.</description>
      <timer>
        <durationMinutes>10</durationMinutes>
        <optional>false</optional>
      </timer>
    </instruction>
    <instruction>
      <stepNumber>8</stepNumber>
      <description>Let cool on baking sheets for a few minutes before serving.</description>
      <timer>
        <durationMinutes>5</durationMinutes>
        <optional>true</optional>
      </timer>
    </instruction>
  </instructions>
  <nutrition>
    <calories>200</calories>
    <fat>10</fat>
    <carbohydrates>30</carbohydrates>
    <protein>5</protein>
  </nutrition>
  <tags>
    <tag>dessert</tag>
    <tag>cookies</tag>
    <tag>chocolate</tag>
    <tag>baking</tag>
    <tag>easy</tag>
  </tags>
</recipe>