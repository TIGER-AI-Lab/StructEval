<recipe>
  <title>Galactic Guacamole</title>
  <author>
    <id>42</id>
    <name>Zorp Glorbax</name>
  </author>
  <ingredients>
    <ingredient>
      <name>Hyperspace Avocados</name>
      <quantity>3</quantity>
      <unit>pieces</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Nebula Nectar</name>
      <quantity>2</quantity>
      <unit>tablespoons</unit>
    </ingredient>
  </ingredients>
  <instructions>
