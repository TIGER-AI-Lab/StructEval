<recipe>
    <title>Spicy Peanut Noodles</title>
    <author>
        <name>Jane Doe</name>
        <contact>jane.doe@email.com</contact>
    </author>
    <ingredients>
        <entry>
            <name>Noodles</name>
            <quantity>200</quantity>
            <unit>grams</unit>
        </entry>
        <entry>
            <name>Peanut Butter</name>
            <quantity>2</quantity>
            <unit>tablespoons</unit>
        </entry>
        <entry>
            <name>Soy Sauce</name>
            <quantity>1</quantity>
            <unit>tablespoon</unit>
        </entry>
        <entry>
            <name>Sriracha</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </entry>
        <entry>
            <name>Lime Juice</name>
            <quantity>1</quantity>
            <unit>tablespoon</unit>
        </entry>
    </ingredients>
    <instructions>
        <step>
            <stepNumber>1</stepNumber>
            <description>Cook noodles according to package directions.</description>
            <timer>
                <seconds>600</seconds>
            </timer>
        </step>
        <step>
            <stepNumber>2</stepNumber>
            <description>In a small bowl, whisk together peanut butter, soy sauce, sriracha, and lime juice.</description>
            <timer>
                <seconds>120</seconds>
            </timer>
        </step>
        <step>
            <stepNumber>3</stepNumber>
            <description>Drain noodles and add them to the sauce. Toss to coat.</description>
            <timer>
                <seconds>60</seconds>
            </timer>
        </step>
    </instructions>
    <metadata>
        <cuisine>Asian Fusion</cuisine>
        <difficulty>easy</difficulty>
        <servings>2</servings>
    </metadata>
    <nutrition>
        <calories>400</calories>
        <fat>15</fat>
        <carbohydrates>60</carbohydrates>
    </nutrition>
</recipe>