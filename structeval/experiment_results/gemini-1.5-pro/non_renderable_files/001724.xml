<recipe>
  <name>Spaghetti Carbonara</name>
  <author>Chef Mario</author>
  <cuisine>Italian</cuisine>
  <prepTime>PT15M</prepTime>
  <cookTime>PT10M</cookTime>
  <servings>2</servings>
  <ingredients>
    <ingredient>
      <name>Spaghetti</name>
      <quantity>200</quantity>
      <unit>grams</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Guanciale</name>
      <quantity>100</quantity>
      <unit>grams</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Eggs</name>
      <quantity>2</quantity>
      <unit>large</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Pecorino Romano cheese</name>
      <quantity>50</quantity>
      <unit>grams</unit>
      <optional>false</optional>
    </ingredient>
    <ingredient>
      <name>Black pepper</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
      <optional>false</optional>
    </ingredient>
  </ingredients>
  <instructions>
    <step>
      <order>1</order>
      <description>Cook spaghetti according to package directions.</description>
      <duration>PT8M</duration>
    </step>
    <step>
      <order>2</order>
      <description>While pasta is cooking, fry guanciale until crispy.</description>
      <duration>PT5M</duration>
    </step>
    <step>
      <order>3</order>
      <description>Whisk eggs, pecorino romano, and black pepper.</description>
      <duration>PT2M</duration>
    </step>
    <step>
      <order>4</order>
      <description>Combine pasta, guanciale, and egg mixture. Toss to coat.</description>
      <duration>PT1M</duration>
    </step>
  </instructions>
  <nutrition>
    <calories>600</calories>
    <fat>20</fat>
    <protein>30</protein>
    <carbohydrates>70</carbohydrates>
  </nutrition>
</recipe>