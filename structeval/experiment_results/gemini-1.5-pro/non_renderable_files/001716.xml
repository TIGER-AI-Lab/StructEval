<recipe>
    <title>Spaghetti Carbonara</title>
    <author>
        <name>John Doe</name>
        <contact>
            <email>john.doe@example.com</email>
            <phone>123-456-7890</phone>
        </contact>
    </author>
    <ingredients>
        <ingredient>
            <name>Spaghetti</name>
            <quantity>200</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Guanciale</name>
            <quantity>100</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Eggs</name>
            <quantity>2</quantity>
            <unit>large</unit>
        </ingredient>
        <ingredient>
            <name>Pecorino Romano cheese</name>
            <quantity>50</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Black pepper</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </ingredient>
    </ingredients>
    <instructions>
        <step>
            <stepNumber>1</stepNumber>
            <description>Cook spaghetti according to package directions.</description>
            <timer>
                <duration>PT8M</duration>
            </timer>
        </step>
        <step>
            <stepNumber>2</stepNumber>
            <description>While pasta is cooking, fry guanciale until crispy.</description>
            <timer>
                <duration>PT5M</duration>
            </timer>
        </step>
        <step>
            <stepNumber>3</stepNumber>
            <description>Whisk eggs, pecorino romano, and black pepper.</description>
            <timer>
                <duration>PT2M</duration>
            </timer>
        </step>
        <step>
            <stepNumber>4</stepNumber>
            <description>Combine pasta, guanciale, and egg mixture. Toss to coat.</description>
            <timer>
                <duration>PT1M</duration>
            </timer>
        </step>
    </instructions>
    <nutrition>
        <calories>600</calories>
        <fat>20</fat>
        <protein>25</protein>
    </nutrition>
    <tags>
        <label>Italian</label>
        <label>Pasta</label>
    </tags>
