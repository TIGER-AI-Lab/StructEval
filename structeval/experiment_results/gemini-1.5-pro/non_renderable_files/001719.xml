<recipe>
  <title>Spaghetti Carbonara</title>
  <author>
    <name>John Doe</name>
    <contact>
      <email>john.doe@example.com</email>
      <phone>+15551234567</phone>
    </contact>
  </author>
  <ingredients>
    <ingredient>
      <name>Spaghetti</name>
      <quantity>250</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Guanciale</name>
      <quantity>100</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Eggs</name>
      <quantity>4</quantity>
      <unit>large</unit>
    </ingredient>
    <ingredient>
      <name>Pecorino Romano cheese</name>
      <quantity>50</quantity>
      <unit>grams</unit>
    </ingredient>
    <ingredient>
      <name>Black pepper</name>
      <quantity>1</quantity>
      <unit>teaspoon</unit>
    </ingredient>
  </ingredients>
  <instructions>
    <step>
      <order>1</order>
      <description>Cook spaghetti according to package directions.</description>
      <duration>
        <minutes>10</minutes>
      </duration>
    </step>
    <step>
      <order>2</order>
      <description>While spaghetti is cooking, cut guanciale into small pieces and fry until crispy.</description>
      <duration>
        <minutes>5</minutes>
      </duration>
    </step>
    <step>
      <order>3</order>
      <description>In a bowl, whisk eggs, grated Pecorino Romano cheese, and black pepper.</description>
      <duration>
        <minutes>2</minutes>
      </duration>
    </step>
    <step>
      <order>4</order>
      <description>Drain spaghetti and add it to the pan with the guanciale.</description>
      <duration>
        <minutes>1</minutes>
      </duration>
    </step>
    <step>
      <order>5</order>
      <description>Remove pan from heat and quickly pour the egg mixture over the spaghetti, tossing constantly to create a creamy sauce.</description>
      <duration>
        <minutes>2</minutes>
      </duration>
    </step>
  </instructions>
  <nutrition>
    <calories>600</calories>
    <fat>
      <grams>30</grams>
      <type>saturated</type>
    </fat>
    <carbohydrates>
      <grams>70</grams>
    </carbohydrates>
    <protein>
      <grams>25</grams>
    </protein>
  </nutrition>
</recipe>