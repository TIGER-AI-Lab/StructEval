<recipe>
    <name>Spaghetti Carbonara</name>
    <author>Chef Luigi</author>
    <cuisine>Italian</cuisine>
    <prepTime>PT15M</prepTime>
    <cookTime>PT20M</cookTime>
    <servings>4</servings>
    <ingredients>
        <ingredient>
            <name>Spaghetti</name>
            <quantity>400</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Pancetta</name>
            <quantity>150</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Eggs</name>
            <quantity>4</quantity>
            <unit>large</unit>
        </ingredient>
        <ingredient>
            <name>Parmesan Cheese</name>
            <quantity>100</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Black Pepper</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </ingredient>
    </ingredients>
    <instructions>
        <step>
            <order>1</order>
            <description>Boil the spaghetti in salted water until al dente.</description>
            <duration>PT10M</duration>
        </step>
        <step>
            <order>2</order>
            <description>Fry the pancetta until crispy.</description>
            <duration>PT5M</duration>
        </step>
        <step>
            <order>3</order>
            <description>Beat the eggs and mix with grated Parmesan cheese.</description>
            <duration>PT3M</duration>
        </step>
        <step>
            <order>4</order>
            <description>Combine spaghetti with pancetta and egg mixture, then season with black pepper.</description>
            <duration>PT2M</duration>
        </step>
    </instructions>
    <nutrition>
        <calories>500</calories>
        <protein>20</protein>
        <fat>22</fat>
    </nutrition>
</recipe>