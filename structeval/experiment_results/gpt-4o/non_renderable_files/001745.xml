<recipe>
    <title>Spaghetti Carbonara</title>
    <author>
        <name>John Doe</name>
        <profileUrl>http://www.johndoe.com</profileUrl>
    </author>
    <ingredients>
        <ingredient>
            <name>Spaghetti</name>
            <quantity>200</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Pancetta</name>
            <quantity>100</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Eggs</name>
            <quantity>3</quantity>
            <unit>pieces</unit>
        </ingredient>
        <ingredient>
            <name>Parmesan Cheese</name>
            <quantity>50</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Black Pepper</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </ingredient>
        <ingredient>
            <name>Salt</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </ingredient>
    </ingredients>
    <instructions>
        <instruction>
            <stepNumber>1</stepNumber>
            <description>Boil the spaghetti in salted water until al dente.</description>
            <timer>
                <durationMinutes>10</durationMinutes>
                <optional>false</optional>
            </timer>
        </instruction>
        <instruction>
            <stepNumber>2</stepNumber>
            <description>Fry the pancetta in a pan until crispy.</description>
            <timer>
                <durationMinutes>5</durationMinutes>
                <optional>false</optional>
            </timer>
        </instruction>
        <instruction>
            <stepNumber>3</stepNumber>
            <description>Beat the eggs and mix with grated Parmesan cheese.</description>
            <timer>
                <durationMinutes>2</durationMinutes>
                <optional>true</optional>
            </timer>
        </instruction>
        <instruction>
            <stepNumber>4</stepNumber>
            <description>Combine spaghetti with pancetta and remove from heat.</description>
            <timer>
                <durationMinutes>1</durationMinutes>
                <optional>false</optional>
            </timer>
        </instruction>
        <instruction>
            <stepNumber>5</stepNumber>
            <description>Stir in the egg and cheese mixture quickly.</description>
            <timer>
                <durationMinutes>1</durationMinutes>
                <optional>false</optional>
            </timer>
        </instruction>
        <instruction>
            <stepNumber>6</stepNumber>
            <description>Season with black pepper and serve immediately.</description>
            <timer>
                <durationMinutes>1</durationMinutes>
                <optional>true</optional>
            </timer>
        </instruction>
    </instructions>
    <nutrition>
        <calories>500</calories>
        <fat>20</fat>
        <carbohydrates>60</carbohydrates>
        <protein>25</protein>
    </nutrition>
    <tags>
        <tag>Italian</tag>
        <tag>Pasta</tag>
        <tag>Quick</tag>
        <tag>Classic</tag>
    </tags>
</recipe>