<recipe>
    <title>Spaghetti Carbonara</title>
    <author>
        <name>John Doe</name>
        <contact>johndoe@example.com</contact>
    </author>
    <ingredients>
        <item>
            <name>Spaghetti</name>
            <quantity>200</quantity>
            <unit>grams</unit>
        </item>
        <item>
            <name>Pancetta</name>
            <quantity>100</quantity>
            <unit>grams</unit>
        </item>
        <item>
            <name>Eggs</name>
            <quantity>3</quantity>
            <unit>pieces</unit>
        </item>
        <item>
            <name>Parmesan Cheese</name>
            <quantity>50</quantity>
            <unit>grams</unit>
        </item>
        <item>
            <name>Black Pepper</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </item>
        <item>
            <name>Salt</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </item>
    </ingredients>
    <steps>
        <step>
            <description>Boil the spaghetti in salted water until al dente.</description>
            <duration>10</duration>
            <tools>Pot, Stove</tools>
        </step>
        <step>
            <description>Fry the pancetta in a pan until crispy.</description>
            <duration>5</duration>
            <tools>Pan, Stove</tools>
        </step>
        <step>
            <description>Beat the eggs and mix with grated Parmesan cheese.</description>
            <duration>3</duration>
            <tools>Bowl, Whisk</tools>
        </step>
        <step>
            <description>Combine spaghetti, pancetta, and egg mixture. Stir quickly.</description>
            <duration>2</duration>
            <tools>Pan, Spoon</tools>
        </step>
        <step>
            <description>Season with black pepper and serve immediately.</description>
            <duration>1</duration>
            <tools>Spoon</tools>
        </step>
    </steps>
    <nutrition>
        <calories>600</calories>
        <fat>20</fat>
        <protein>25</protein>
        <carbohydrates>75</carbohydrates>
    </nutrition>
    <metadata>
        <cuisine>Italian</cuisine>
        <difficulty>Medium</difficulty>
        <lastUpdated>2023-10-01</lastUpdated>
    </metadata>
</recipe>