<recipe>
    <title>Spaghetti Carbonara</title>
    <author>
        <name>John Doe</name>
        <contact>
            <email>johndoe@example.com</email>
            <phone>+1234567890</phone>
        </contact>
    </author>
    <ingredients>
        <ingredient>
            <name>Spaghetti</name>
            <quantity>200</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Pancetta</name>
            <quantity>100</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Eggs</name>
            <quantity>3</quantity>
            <unit>units</unit>
        </ingredient>
        <ingredient>
            <name>Parmesan Cheese</name>
            <quantity>50</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Black Pepper</name>
            <quantity>1</quantity>
            <unit>teaspoon</unit>
        </ingredient>
    </ingredients>
    <instructions>
        <instruction>
            <stepNumber>1</stepNumber>
            <description>Boil the spaghetti in salted water until al dente.</description>
            <timer>
                <duration>PT10M</duration>
            </timer>
        </instruction>
        <instruction>
            <stepNumber>2</stepNumber>
            <description>Fry the pancetta in a pan until crispy.</description>
            <timer>
                <duration>PT5M</duration>
            </timer>
        </instruction>
        <instruction>
            <stepNumber>3</stepNumber>
            <description>Beat the eggs and mix with grated Parmesan cheese.</description>
            <timer>
                <duration>PT2M</duration>
            </timer>
        </instruction>
        <instruction>
            <stepNumber>4</stepNumber>
            <description>Combine spaghetti with pancetta and remove from heat. Stir in the egg mixture quickly.</description>
            <timer>
                <duration>PT3M</duration>
            </timer>
        </instruction>
        <instruction>
            <stepNumber>5</stepNumber>
            <description>Season with black pepper and serve immediately.</description>
            <timer>
                <duration>PT1M</duration>
            </timer>
        </instruction>
    </instructions>
    <nutrition>
        <calories>500</calories>
        <fat>20.5</fat>
        <protein>25.3</protein>
    </nutrition>
    <tags>
        <label>Italian</label>
        <label>Pasta</label>
        <label>Quick</label>
    </tags>
