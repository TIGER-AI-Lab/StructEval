<recipe>
    <title>Spicy Thai Basil Chicken</title>
    <author>
        <name>Jane Doe</name>
        <contact>
            <email>jane.doe@example.com</email>
            <phone>+1234567890</phone>
        </contact>
    </author>
    <ingredients>
        <ingredient>
            <name>Chicken breast</name>
            <quantity>500</quantity>
            <unit>grams</unit>
        </ingredient>
        <ingredient>
            <name>Thai basil leaves</name>
            <quantity>1</quantity>
            <unit>cup</unit>
        </ingredient>
        <ingredient>
            <name>Garlic cloves</name>
            <quantity>4</quantity>
            <unit>pieces</unit>
        </ingredient>
        <ingredient>
            <name>Red chili</name>
            <quantity>2</quantity>
            <unit>pieces</unit>
        </ingredient>
        <ingredient>
            <name>Soy sauce</name>
            <quantity>3</quantity>
            <unit>tablespoons</unit>
        </ingredient>
        <ingredient>
            <name>Fish sauce</name>
            <quantity>1</quantity>
            <unit>tablespoon</unit>
        </ingredient>
        <ingredient>
            <name>Vegetable oil</name>
            <quantity>2</quantity>
            <unit>tablespoons</unit>
        </ingredient>
    </ingredients>
    <steps>
        <step>
            <instruction>Slice the chicken breast into thin strips.</instruction>
            <duration_minutes>10</duration_minutes>
        </step>
        <step>
            <instruction>Chop the garlic and red chili finely.</instruction>
            <duration_minutes>5</duration_minutes>
        </step>
        <step>
            <instruction>Heat oil in a pan over medium heat.</instruction>
            <duration_minutes>2</duration_minutes>
        </step>
        <step>
            <instruction>Add garlic and chili to the pan and stir-fry until fragrant.</instruction>
            <duration_minutes>3</duration_minutes>
        </step>
        <step>
            <instruction>Add chicken strips to the pan and cook until no longer pink.</instruction>
            <duration_minutes>7</duration_minutes>
        </step>
        <step>
            <instruction>Stir in soy sauce and fish sauce, then add basil leaves and cook until wilted.</instruction>
            <duration_minutes>3</duration_minutes>
        </step>
    </steps>
